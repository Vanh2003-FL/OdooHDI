<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <!-- Main Warehouse Layout Editor Container -->
    <t t-name="stock_3d_custom_view.warehouse_layout_editor_main">
        <div class="warehouse-layout-editor-container">
            <!-- Breadcrumb Navigation -->
            <div class="warehouse-breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="#"><i class="fa fa-home"></i> Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#">Warehouses</a>
                    </li>
                    <li class="breadcrumb-item active" t-text="warehouse_name"/>
                </ol>
                <div class="warehouse-actions">
                    <button class="btn btn-sm btn-secondary" id="btn_toggle_2d_3d">
                        <i class="fa fa-cube"></i> 2D/3D Toggle
                    </button>
                    <button class="btn btn-sm btn-primary" id="btn_save_layout">
                        <i class="fa fa-save"></i> Save Layout
                    </button>
                </div>
            </div>

            <!-- Main Layout: Left | Center | Right -->
            <div class="layout-wrapper">
                <!-- LEFT PANEL: 2D Editor Canvas -->
                <div class="panel-left">
                    <div class="panel-header">
                        <h5>2D Layout Editor</h5>
                        <div class="toolbar">
                            <button class="btn btn-xs btn-info" title="Draw Shelf" id="btn_draw_shelf">
                                <i class="fa fa-plus-square"></i>
                            </button>
                            <button class="btn btn-xs btn-warning" title="Draw Bin" id="btn_draw_bin">
                                <i class="fa fa-th"></i>
                            </button>
                            <button class="btn btn-xs btn-danger" title="Delete" id="btn_delete">
                                <i class="fa fa-trash"></i>
                            </button>
                            <button class="btn btn-xs btn-default" title="Clear All" id="btn_clear_all">
                                <i class="fa fa-eraser"></i>
                            </button>
                        </div>
                    </div>
                    <canvas id="canvas_2d_editor" class="canvas-2d"></canvas>
                </div>

                <!-- CENTER PANEL: 3D Preview -->
                <div class="panel-center">
                    <div class="panel-header">
                        <h5>3D Preview</h5>
                        <div class="toolbar">
                            <button class="btn btn-xs btn-default" title="Reset View" id="btn_reset_3d">
                                <i class="fa fa-refresh"></i>
                            </button>
                            <button class="btn btn-xs btn-default" title="Fit View" id="btn_fit_view">
                                <i class="fa fa-expand"></i>
                            </button>
                        </div>
                    </div>
                    <div id="canvas_3d_viewer" class="canvas-3d"></div>
                </div>

                <!-- RIGHT PANEL: Inventory List -->
                <div class="panel-right">
                    <div class="panel-header">
                        <h5>Inventory Items</h5>
                        <div class="toolbar">
                            <input type="text" class="form-control form-control-sm" 
                                   id="search_inventory" placeholder="Search..."/>
                        </div>
                    </div>
                    <div id="inventory_list" class="inventory-list"></div>
                </div>
            </div>
        </div>
    </t>

    <!-- Inventory Item Card Template -->
    <t t-name="stock_3d_custom_view.inventory_item_card">
        <div class="inventory-item-card" t-attr-data-product-id="product_id">
            <div class="item-image">
                <img t-att-src="product_image_url" alt="Product Image"/>
            </div>
            <div class="item-details">
                <h6 class="item-name" t-text="product_name"/>
                <p class="item-sku">
                    <strong>SKU:</strong> <span t-text="product_sku"/>
                </p>
                <p class="item-quantity">
                    <strong>Quantity:</strong> 
                    <span class="badge badge-info" t-text="quantity"/>
                </p>
                <p class="item-location">
                    <strong>Location:</strong> <span t-text="location_name"/>
                </p>
            </div>
            <div class="item-actions">
                <button class="btn btn-xs btn-primary" title="View Details">
                    <i class="fa fa-eye"></i>
                </button>
            </div>
        </div>
    </t>

    <!-- Modal: Edit Location Properties -->
    <t t-name="stock_3d_custom_view.modal_location_properties">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Location Properties</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>Ã—</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Location Code</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="edit_location_code"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Position X</label>
                            <div class="col-sm-9">
                                <input type="number" class="form-control" id="edit_pos_x"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Position Y</label>
                            <div class="col-sm-9">
                                <input type="number" class="form-control" id="edit_pos_y"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Position Z</label>
                            <div class="col-sm-9">
                                <input type="number" class="form-control" id="edit_pos_z"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Length (M)</label>
                            <div class="col-sm-9">
                                <input type="number" class="form-control" id="edit_length" step="0.1"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Width (M)</label>
                            <div class="col-sm-9">
                                <input type="number" class="form-control" id="edit_width" step="0.1"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Height (M)</label>
                            <div class="col-sm-9">
                                <input type="number" class="form-control" id="edit_height" step="0.1"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Max Capacity</label>
                            <div class="col-sm-9">
                                <input type="number" class="form-control" id="edit_max_capacity"/>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="btn_save_properties">Save Changes</button>
                </div>
            </div>
        </div>
    </t>
</templates>
