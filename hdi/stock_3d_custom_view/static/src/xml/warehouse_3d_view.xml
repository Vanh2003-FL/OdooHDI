<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <!-- Main Warehouse 3D View Template -->
    <t t-name="stock_3d_custom_view.Warehouse3DView">
        <div class="o_warehouse_3d_view">
            <!-- Header with controls -->
            <div class="o_warehouse_3d_header">
                <div class="d-flex justify-content-between align-items-center p-3">
                    <div class="d-flex align-items-center gap-3">
                        <h4 class="mb-0">
                            <i class="fa fa-cube me-2"/>
                            <t t-esc="'3D Warehouse View'"/>
                        </h4>
                        
                        <select t-if="state.warehouses.length > 0" 
                                class="form-select warehouse-selector" 
                                t-on-change="onWarehouseChange"
                                style="width: 250px;">
                            <t t-foreach="state.warehouses" t-as="wh" t-key="wh[0]">
                                <option t-att-value="wh[0]" 
                                        t-att-selected="wh[0] === state.selectedWarehouse">
                                    <t t-esc="wh[1]"/>
                                </option>
                            </t>
                        </select>
                    </div>

                    <!-- Legend -->
                    <div class="d-flex align-items-center gap-3">
                        <div class="legend-item">
                            <span class="legend-color" style="background: #00802b;"/>
                            <span>High Stock (&gt;100)</span>
                        </div>
                        <div class="legend-item">
                            <span class="legend-color" style="background: #e6b800;"/>
                            <span>Medium Stock (50-100)</span>
                        </div>
                        <div class="legend-item">
                            <span class="legend-color" style="background: #cc0000;"/>
                            <span>Low Stock (&lt;50)</span>
                        </div>
                        <div class="legend-item">
                            <span class="legend-color" style="background: #8c8c8c;"/>
                            <span>Empty</span>
                        </div>
                    </div>

                    <button class="btn btn-secondary" t-on-click="onClose">
                        <i class="fa fa-times me-1"/>
                        Close
                    </button>
                </div>
            </div>

            <!-- 3D Container -->
            <div class="o_warehouse_3d_container_wrapper">
                <div t-if="state.loading" class="text-center p-5">
                    <i class="fa fa-spinner fa-spin fa-3x text-primary"/>
                    <p class="mt-3">Loading 3D warehouse view...</p>
                </div>
                
                <div id="warehouse3d-container" 
                     class="warehouse3d-canvas"
                     t-att-class="{ 'd-none': state.loading }"/>
            </div>

            <!-- Product List Sidebar -->
            <div class="o_warehouse_3d_sidebar" t-if="state.products.length > 0">
                <h5 class="p-3 border-bottom mb-0">
                    <i class="fa fa-list me-2"/>
                    Products (<t t-esc="state.products.length"/>)
                </h5>
                <div class="product-list">
                    <t t-foreach="state.products" t-as="product" t-key="product.id">
                        <div class="product-item p-2 border-bottom">
                            <div class="d-flex align-items-start">
                                <div t-attf-class="product-color-indicator" 
                                     t-attf-style="background-color: #{{ product.color.toString(16).padStart(6, '0') }};"/>
                                <div class="flex-grow-1 ms-2">
                                    <div class="fw-bold small"><t t-esc="product.product_name"/></div>
                                    <div class="text-muted small">
                                        <span class="badge bg-secondary me-1"><t t-esc="product.lot_name"/></span>
                                        <span>Qty: <t t-esc="product.quantity"/></span>
                                    </div>
                                    <div class="text-muted" style="font-size: 0.75rem;">
                                        <t t-esc="product.location_name"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </div>
    </t>

</templates>
