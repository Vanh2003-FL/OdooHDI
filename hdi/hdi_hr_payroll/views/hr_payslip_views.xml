<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Tree View -->
    <record id="view_hr_payslip_tree" model="ir.ui.view">
        <field name="name">hr.payslip.tree</field>
        <field name="model">hr.payslip</field>
        <field name="arch" type="xml">
            <list string="Phiếu lương">
                <field name="employee_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="struct_id"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hr_payslip_form" model="ir.ui.view">
        <field name="name">hr.payslip.form</field>
        <field name="model">hr.payslip</field>
        <field name="arch" type="xml">
            <form string="Phiếu lương">
                <header>
                    <button name="compute_sheet" string="Tính lương" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_payslip_done" string="Xác nhận" type="object" class="oe_highlight" invisible="state != 'verify'"/>
                    <button name="action_payslip_cancel" string="Hủy" type="object" invisible="state not in ('draft', 'verify')"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="VD: Lương tháng 12/2025" readonly="state != 'draft'"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" readonly="state != 'draft'"/>
                            <field name="contract_id" readonly="state != 'draft'" context="{'default_employee_id': employee_id}" domain="[('employee_id', '=', employee_id), ('state', 'in', ['open', 'close'])]"/>
                            <field name="struct_id" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="date_from" readonly="state != 'draft'"/>
                            <field name="date_to" readonly="state != 'draft'"/>
                            <field name="standard_days" readonly="state != 'draft'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Chi tiết lương">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="quantity"/>
                                    <field name="rate"/>
                                    <field name="amount"/>
                                </list>
                            </field>
                        </page>
                        <page string="Ngày công">
                            <field name="worked_days_line_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="number_of_days"/>
                                    <field name="number_of_hours"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hr_payslip" model="ir.actions.act_window">
        <field name="name">Phiếu lương</field>
        <field name="res_model">hr.payslip</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
