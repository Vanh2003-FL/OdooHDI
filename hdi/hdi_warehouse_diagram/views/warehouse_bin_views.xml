<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Warehouse Bin - Form View -->
        <record id="warehouse_bin_form" model="ir.ui.view">
            <field name="name">warehouse.bin.form</field>
            <field name="model">warehouse.bin</field>
            <field name="arch" type="xml">
                <form string="Warehouse Bin/Location">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="shelves_id" required="1"/>
                                <field name="bin_type" required="1"/>
                                <field name="status"/>
                            </group>
                            <group>
                                <field name="active"/>
                                <field name="color"/>
                                <field name="is_reserved"/>
                            </group>
                        </group>
                        
                        <separator string="Location"/>
                        <group>
                            <group>
                                <field name="level"/>
                                <field name="column"/>
                                <field name="row"/>
                            </group>
                        </group>
                        
                        <separator string="Position &amp; Dimensions"/>
                        <group>
                            <group>
                                <field name="x_pos"/>
                                <field name="y_pos"/>
                            </group>
                            <group>
                                <field name="width"/>
                                <field name="height"/>
                                <field name="depth"/>
                            </group>
                        </group>
                        
                        <separator string="Capacity"/>
                        <group>
                            <group>
                                <field name="capacity_units"/>
                                <field name="capacity_weight"/>
                            </group>
                        </group>
                        
                        <separator string="Special Properties"/>
                        <group>
                            <group>
                                <field name="is_hazmat"/>
                                <field name="requires_cool_storage"/>
                            </group>
                        </group>
                        
                        <separator string="Linked Information"/>
                        <group>
                            <group>
                                <field name="location_id"/>
                            </group>
                        </group>
                        
                        <field name="product_ids" placeholder="Products assigned to this bin..." nolabel="1"/>
                        <field name="description" placeholder="Mô tả chi tiết về ô..." nolabel="1"/>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Warehouse Bin - Tree View -->
        <record id="warehouse_bin_tree" model="ir.ui.view">
            <field name="name">warehouse.bin.tree</field>
            <field name="model">warehouse.bin</field>
            <field name="arch" type="xml">
                <tree string="Warehouse Bins">
                    <field name="name"/>
                    <field name="shelves_id"/>
                    <field name="level"/>
                    <field name="column"/>
                    <field name="row"/>
                    <field name="bin_type"/>
                    <field name="status"/>
                    <field name="is_reserved"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Warehouse Bin - Kanban View -->
        <record id="warehouse_bin_kanban" model="ir.ui.view">
            <field name="name">warehouse.bin.kanban</field>
            <field name="model">warehouse.bin</field>
            <field name="arch" type="xml">
                <kanban string="Warehouse Bins" default_group_by="status">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="bin_type"/>
                    <field name="status"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card">
                                <div class="oe_kanban_card_header">
                                    <strong><field name="name"/></strong>
                                </div>
                                <div class="oe_kanban_card_content">
                                    <p>
                                        <strong>Type:</strong> <field name="bin_type"/>
                                    </p>
                                    <p>
                                        <strong>Level:</strong> <field name="level"/>
                                    </p>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Warehouse Bin - Action -->
        <record id="warehouse_bin_action" model="ir.actions.act_window">
            <field name="name">Warehouse Bins</field>
            <field name="res_model">warehouse.bin</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{"search_default_shelves_id": context.get('default_shelves_id', False)}</field>
        </record>

    </data>
</odoo>
