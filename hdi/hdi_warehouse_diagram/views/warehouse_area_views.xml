<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Warehouse Area - Form View -->
        <record id="warehouse_area_form" model="ir.ui.view">
            <field name="name">warehouse.area.form</field>
            <field name="model">warehouse.area</field>
            <field name="arch" type="xml">
                <form string="Warehouse Non-Storage Area">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="view_id" required="1"/>
                                <field name="area_type" required="1"/>
                                <field name="is_dangerous"/>
                            </group>
                            <group>
                                <field name="active"/>
                                <field name="color"/>
                            </group>
                        </group>
                        
                        <separator string="Position &amp; Dimensions"/>
                        <group>
                            <group>
                                <field name="x_pos"/>
                                <field name="y_pos"/>
                            </group>
                            <group>
                                <field name="width"/>
                                <field name="height"/>
                            </group>
                        </group>
                        
                        <field name="description" placeholder="Mô tả chi tiết về khu vực..." nolabel="1"/>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Warehouse Area - List View -->
        <record id="warehouse_area_list" model="ir.ui.view">
            <field name="name">warehouse.area.list</field>
            <field name="model">warehouse.area</field>
            <field name="arch" type="xml">
                <list string="Warehouse Areas">
                    <field name="name"/>
                    <field name="view_id"/>
                    <field name="area_type"/>
                    <field name="is_dangerous"/>
                    <field name="width"/>
                    <field name="height"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Warehouse Area - Action -->
        <record id="warehouse_area_action" model="ir.actions.act_window">
            <field name="name">Warehouse Areas</field>
            <field name="res_model">warehouse.area</field>
            <field name="view_mode">list,form</field>
            <field name="context">{"search_default_warehouse_view_id": context.get('default_view_id', False)}</field>
        </record>

    </data>
</odoo>
