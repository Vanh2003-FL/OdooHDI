<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_reason_for_refuse_wizard_form" model="ir.ui.view">
        <field name="name">reason.for.refuse.wizard.form</field>
        <field name="model">reason.for.refuse.wizard</field>
        <field name="arch" type="xml">
            <form string="Từ chối giải trình">
                <group>
                    <field name="explanation_id" invisible="1"/>
                    <field name="reason" placeholder="Nhập lý do từ chối..." nolabel="1"/>
                </group>
                <footer>
                    <button string="Xác nhận" name="action_confirm" type="object" class="btn-primary"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
