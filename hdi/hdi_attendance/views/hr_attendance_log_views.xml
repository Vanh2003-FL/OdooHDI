<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Attendance Log Tree View -->
    <record id="view_hr_attendance_log_tree" model="ir.ui.view">
        <field name="name">hr.attendance.log.tree</field>
        <field name="model">hr.attendance.log</field>
        <field name="arch" type="xml">
            <list string="Nhật ký chấm công" decoration-muted="status=='processed'" 
                  decoration-danger="status=='failed'" create="false">
                <field name="employee_id"/>
                <field name="action_time"/>
                <field name="action_type"/>
                <field name="status" widget="badge"
                       decoration-warning="status=='pending'"
                       decoration-success="status=='processed'"
                       decoration-danger="status=='failed'"/>
                <field name="attendance_id"/>
                <field name="error_message"/>
            </list>
        </field>
    </record>

    <!-- Attendance Log Form View -->
    <record id="view_hr_attendance_log_form" model="ir.ui.view">
        <field name="name">hr.attendance.log.form</field>
        <field name="model">hr.attendance.log</field>
        <field name="arch" type="xml">
            <form string="Nhật ký chấm công" create="false" edit="false">
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="action_time"/>
                            <field name="action_type"/>
                        </group>
                        <group>
                            <field name="status"/>
                            <field name="attendance_id"/>
                        </group>
                    </group>
                    <group string="Thông tin lỗi" invisible="status != 'failed'">
                        <field name="error_message" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Attendance Log Action -->
    <record id="hr_attendance_log_action" model="ir.actions.act_window">
        <field name="name">Nhật ký chấm công</field>
        <field name="res_model">hr.attendance.log</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
