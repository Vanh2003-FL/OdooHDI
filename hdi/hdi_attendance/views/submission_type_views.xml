<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Submission Type Tree View -->
    <record id="view_submission_type_tree" model="ir.ui.view">
        <field name="name">submission.type.tree</field>
        <field name="model">submission.type</field>
        <field name="arch" type="xml">
            <list string="Loại giải trình">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="mark_count" widget="boolean_toggle"/>
                <field name="used_explanation_date" widget="boolean_toggle"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- Submission Type Form View -->
    <record id="view_submission_type_form" model="ir.ui.view">
        <field name="name">submission.type.form</field>
        <field name="model">submission.type</field>
        <field name="arch" type="xml">
            <form string="Loại giải trình">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="mark_count" widget="boolean_toggle"/>
                            <field name="used_explanation_date" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <group string="Mô tả">
                        <field name="description" nolabel="1" placeholder="Nhập mô tả cho loại giải trình này..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Submission Type Search View -->
    <record id="view_submission_type_search" model="ir.ui.view">
        <field name="name">submission.type.search</field>
        <field name="model">submission.type</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm loại giải trình">
                <field name="name"/>
                <field name="code"/>
                <filter string="Tính vào hạn mức" name="filter_mark_count"
                        domain="[('mark_count', '=', True)]"/>
                <filter string="Dùng ngày giải trình" name="filter_use_date"
                        domain="[('used_explanation_date', '=', True)]"/>
            </search>
        </field>
    </record>

    <!-- Submission Type Action -->
    <record id="action_submission_type" model="ir.actions.act_window">
        <field name="name">Loại giải trình</field>
        <field name="res_model">submission.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo loại giải trình mới
            </p>
            <p>
                Các loại giải trình xác định cách xử lý giải trình chấm công:<br/>
                - <b>Tính vào hạn mức:</b> Loại này sẽ được đếm trong số lần giải trình tối đa/tháng<br/>
                - <b>Dùng ngày giải trình:</b> Sử dụng trường ngày giải trình thay vì chọn bản ghi chấm công
            </p>
        </field>
    </record>
</odoo>
