<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hdi.attendance</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="95"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='hr_attendance']" position="after">
                <app string="HDI Attendance" name="hdi_attendance" groups="hdi_attendance.group_attendance_manager">
                    <block title="Cấu hình chấm công HDI">
                        <setting>
                            <label for="en_max_distance"/>
                            <div class="text-muted">
                                Khoảng cách tối đa (km) để cho phép chấm công
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="en_max_distance" class="oe_inline"/>
                                    <span> km (0 = không giới hạn)</span>
                                </div>
                            </div>
                        </setting>

                        <setting>
                            <label for="en_late_request"/>
                            <div class="text-muted">
                                Dung sai đi muộn (giờ)
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="en_late_request" class="oe_inline" widget="float_time"/>
                                </div>
                            </div>
                        </setting>

                        <setting>
                            <label for="en_soon_request"/>
                            <div class="text-muted">
                                Dung sai về sớm (giờ)
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="en_soon_request" class="oe_inline" widget="float_time"/>
                                </div>
                            </div>
                        </setting>
                    </block>

                    <block title="Giải trình chấm công">
                        <setting>
                            <label for="en_max_attendance_request_count"/>
                            <div class="text-muted">
                                Số lần giải trình tối đa trong một chu kỳ
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="en_max_attendance_request_count" class="oe_inline"/>
                                    <span> lần/chu kỳ</span>
                                </div>
                            </div>
                        </setting>

                        <setting>
                            <label for="en_attendance_request_start"/>
                            <div class="text-muted">
                                Ngày bắt đầu chu kỳ công
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <span>Ngày </span>
                                    <field name="en_attendance_request_start" class="oe_inline"/>
                                    <span> hàng tháng</span>
                                </div>
                            </div>
                        </setting>

                        <setting>
                            <label for="en_max_attendance_request"/>
                            <div class="text-muted">
                                Thời hạn giải trình sau khi check out (giờ)
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="en_max_attendance_request" class="oe_inline" widget="float_time"/>
                                    <span> (0 = không giới hạn)</span>
                                </div>
                            </div>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>
