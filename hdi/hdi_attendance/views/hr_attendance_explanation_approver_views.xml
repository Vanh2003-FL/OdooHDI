<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Attendance Explanation Approver Tree View -->
    <record id="view_hr_attendance_explanation_approver_tree" model="ir.ui.view">
        <field name="name">hr.attendance.explanation.approver.tree</field>
        <field name="model">hr.attendance.explanation.approver</field>
        <field name="arch" type="xml">
            <list decoration-success="state=='approved'"
                  decoration-danger="state=='refuse'">
                <field name="sequence" widget="handle"/>
                <field name="user_id"/>
                <field name="role_selection"/>
                <field name="state" widget="badge"/>
                <field name="approval_date"/>
                <field name="comment"/>
            </list>
        </field>
    </record>

    <!-- Attendance Explanation Approver Form View -->
    <record id="view_hr_attendance_explanation_approver_form" model="ir.ui.view">
        <field name="name">hr.attendance.explanation.approver.form</field>
        <field name="model">hr.attendance.explanation.approver</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="sequence"/>
                    <field name="user_id"/>
                    <field name="role_selection"/>
                    <field name="state"/>
                    <field name="approval_date"/>
                    <field name="comment"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
