<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Attendance Explanation Detail Form View -->
    <record id="view_hr_attendance_explanation_detail_form" model="ir.ui.view">
        <field name="name">hr.attendance.explanation.detail.form</field>
        <field name="model">hr.attendance.explanation.detail</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="type"/>
                    <field name="time" widget="float_time"/>
                    <field name="date" readonly="1"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Attendance Explanation Detail Tree View -->
    <record id="view_hr_attendance_explanation_detail_tree" model="ir.ui.view">
        <field name="name">hr.attendance.explanation.detail.tree</field>
        <field name="model">hr.attendance.explanation.detail</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="type"/>
                <field name="time" widget="float_time"/>
                <field name="date" readonly="1"/>
            </list>
        </field>
    </record>
</odoo>
