<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Attendance Explanation Tree View -->
    <record id="view_hr_attendance_explanation_tree" model="ir.ui.view">
        <field name="name">hr.attendance.explanation.tree</field>
        <field name="model">hr.attendance.explanation</field>
        <field name="arch" type="xml">
            <list string="Giải trình chấm công"
                  decoration-info="state=='new'"
                  decoration-warning="state=='to_approve'"
                  decoration-success="state=='approved'"
                  decoration-danger="state=='refuse'">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="explanation_date"/>
                <field name="submission_type_id"/>
                <field name="submission_code" optional="hide"/>
                <field name="check_need_approve" optional="hide"/>
                <field name="state" widget="badge"
                       decoration-info="state=='new'"
                       decoration-warning="state=='to_approve'"
                       decoration-success="state=='approved'"
                       decoration-danger="state=='refuse'"/>
            </list>
        </field>
    </record>

    <!-- Attendance Explanation Form View -->
    <record id="view_hr_attendance_explanation_form" model="ir.ui.view">
        <field name="name">hr.attendance.explanation.form</field>
        <field name="model">hr.attendance.explanation</field>
        <field name="arch" type="xml">
            <form string="Giải trình chấm công">
                <header>
                    <button name="send_approve" string="Gửi phê duyệt" type="object"
                            class="oe_highlight" invisible="state != 'new'"/>
                    <button name="button_approve" string="Phê duyệt" type="object"
                            class="oe_highlight" invisible="state != 'to_approve'"
                            groups="hdi_attendance.group_attendance_manager"/>
                    <button name="button_refuse" string="Từ chối" type="object"
                            invisible="state != 'to_approve'"
                            groups="hdi_attendance.group_attendance_manager"/>
                    <button name="mass_button_approve" string="Duyệt hàng loạt" type="object"
                            invisible="state != 'to_approve'"
                            groups="hdi_attendance.group_attendance_manager"/>
                    <button name="mass_button_refuse" string="Từ chối hàng loạt" type="object"
                            invisible="state != 'to_approve'"
                            groups="hdi_attendance.group_attendance_manager"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="new,to_approve,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" readonly="state != 'new'"/>
                            <field name="submission_type_id" readonly="state != 'new'"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="submission_code" invisible="1"/>
                            <field name="used_explanation_date" invisible="1"/>
                            <field name="hr_attendance_id" readonly="state != 'new'"
                                   invisible="used_explanation_date"
                                   options="{'no_create': True}"/>
                            <field name="explanation_date" readonly="state != 'new'"
                                   invisible="not used_explanation_date"/>
                        </group>
                        <group>
                            <field name="check_need_approve" invisible="1"/>
                            <field name="missing_hr_attendance_id" readonly="1"
                                   invisible="submission_code != 'MA'"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Chi tiết giờ giấc" name="details">
                            <field name="line_ids" readonly="state != 'new'"
                                   context="{'tree_view_ref': 'hdi_attendance.view_hr_attendance_explanation_detail_tree'}"/>
                        </page>

                        <page string="Giải trình" name="reason">
                            <group>
                                <field name="explanation_reason" readonly="state != 'new'" nolabel="1"
                                       placeholder="Nhập lý do giải trình chi tiết..."/>
                            </group>
                            <group string="Tài liệu đính kèm">
                                <field name="attachment_ids" widget="many2many_binary"
                                       readonly="state != 'new'" nolabel="1"/>
                            </group>
                        </page>

                        <page string="Quy trình phê duyệt" name="approval" invisible="state == 'new'">
                            <field name="approver_ids" readonly="1"
                                   context="{'tree_view_ref': 'hdi_attendance.view_hr_attendance_explanation_approver_tree'}"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Attendance Explanation Search View -->
    <record id="view_hr_attendance_explanation_search" model="ir.ui.view">
        <field name="name">hr.attendance.explanation.search</field>
        <field name="model">hr.attendance.explanation</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm giải trình">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="submission_type_id"/>
                <field name="submission_code"/>

                <filter string="Của tôi" name="my_explanations"
                        domain="[('employee_id.user_id', '=', uid)]"/>
                <separator/>
                <filter string="Mới tạo" name="filter_new"
                        domain="[('state', '=', 'new')]"/>
                <filter string="Chờ duyệt" name="filter_to_approve"
                        domain="[('state', '=', 'to_approve')]"/>
                <filter string="Đã duyệt" name="filter_approved"
                        domain="[('state', '=', 'approved')]"/>
                <filter string="Từ chối" name="filter_refuse"
                        domain="[('state', '=', 'refuse')]"/>
                <separator/>
                <filter string="Cần phê duyệt" name="filter_need_my_approve"
                        domain="[('check_need_approve', '=', True)]"
                        groups="hdi_attendance.group_attendance_manager"/>
                <separator/>
                <filter string="Tháng này" name="filter_thismonth"
                        domain="[('create_date', '>=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('create_date', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="Nhóm theo">
                    <filter string="Nhân viên" name="group_employee"
                            context="{'group_by': 'employee_id'}"/>
                    <filter string="Trạng thái" name="group_state"
                            context="{'group_by': 'state'}"/>
                    <filter string="Loại giải trình" name="group_type"
                            context="{'group_by': 'submission_type_id'}"/>
                    <filter string="Ngày" name="group_date"
                            context="{'group_by': 'explanation_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="hr_attendance_explanation_my_action" model="ir.actions.act_window">
        <field name="name">Giải trình chấm công của tôi</field>
        <field name="res_model">hr.attendance.explanation</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('employee_id.user_id', '=', uid)]</field>
        <field name="context">{
            'search_default_filter_thismonth': 1,
            'default_employee_id': context.get('default_employee_id', False)
        }</field>
    </record>

    <record id="action_hr_attendance_explanation" model="ir.actions.act_window">
        <field name="name">Tất cả giải trình chấm công</field>
        <field name="res_model">hr.attendance.explanation</field>
        <field name="view_mode">list,form</field>
        <field name="context">{
            'search_default_filter_to_approve': 1
        }</field>
    </record>

    <record id="action_hr_attendance_explanation_need_approve" model="ir.actions.act_window">
        <field name="name">Giải trình cần phê duyệt</field>
        <field name="res_model">hr.attendance.explanation</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('check_need_approve', '=', True)]</field>
        <field name="context">{
            'search_default_filter_to_approve': 1
        }</field>
    </record>
</odoo>
