<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Groups -->
        <record id="group_attendance_user" model="res.groups">
            <field name="name">HDI Attendance User</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="implied_ids" eval="[(4, ref('hr.group_hr_user'))]"/>
        </record>

        <record id="group_attendance_manager" model="res.groups">
            <field name="name">HDI Attendance Manager</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="implied_ids" eval="[(4, ref('group_attendance_user')), (4, ref('hr.group_hr_manager'))]"/>
        </record>
    </data>
</odoo>
