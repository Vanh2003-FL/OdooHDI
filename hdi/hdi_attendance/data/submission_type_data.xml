<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Submission Types - Theo NGSD Standard -->
        
        <!-- MA: Quên chấm công (Missing Attendance) -->
        <record id="submission_type_ma" model="submission.type">
            <field name="name">Quên chấm công</field>
            <field name="code">MA</field>
            <field name="sequence">10</field>
            <field name="mark_count" eval="True"/>
            <field name="used_explanation_date" eval="True"/>
            <field name="description">Tạo bản ghi chấm công mới cho ngày quên chấm công</field>
        </record>

        <!-- DCC: Điều chỉnh Check in -->
        <record id="submission_type_dcc" model="submission.type">
            <field name="name">Điều chỉnh Check in</field>
            <field name="code">DCC</field>
            <field name="sequence">20</field>
            <field name="mark_count" eval="True"/>
            <field name="used_explanation_date" eval="False"/>
            <field name="description">Điều chỉnh giờ check in của bản ghi chấm công</field>
        </record>

        <!-- DCO: Điều chỉnh Check out -->
        <record id="submission_type_dco" model="submission.type">
            <field name="name">Điều chỉnh Check out</field>
            <field name="code">DCO</field>
            <field name="sequence">30</field>
            <field name="mark_count" eval="True"/>
            <field name="used_explanation_date" eval="False"/>
            <field name="description">Điều chỉnh giờ check out của bản ghi chấm công</field>
        </record>

        <!-- TSDA: Timesheet đã duyệt -->
        <record id="submission_type_tsda" model="submission.type">
            <field name="name">Timesheet đã duyệt</field>
            <field name="code">TSDA</field>
            <field name="sequence">40</field>
            <field name="mark_count" eval="False"/>
            <field name="used_explanation_date" eval="True"/>
            <field name="description">Giải trình liên quan đến timesheet đã được phê duyệt</field>
        </record>

        <!-- TSNDA: Timesheet chưa duyệt -->
        <record id="submission_type_tsnda" model="submission.type">
            <field name="name">Timesheet chưa duyệt</field>
            <field name="code">TSNDA</field>
            <field name="sequence">50</field>
            <field name="mark_count" eval="False"/>
            <field name="used_explanation_date" eval="True"/>
            <field name="description">Giải trình liên quan đến timesheet chưa được phê duyệt</field>
        </record>

        <!-- Additional types for compatibility -->
        <record id="submission_type_late_checkin" model="submission.type">
            <field name="name">Đi muộn</field>
            <field name="code">LATE</field>
            <field name="sequence">60</field>
            <field name="mark_count" eval="True"/>
            <field name="used_explanation_date" eval="False"/>
            <field name="description">Giải trình cho trường hợp đi làm muộn</field>
        </record>

        <record id="submission_type_early_checkout" model="submission.type">
            <field name="name">Về sớm</field>
            <field name="code">EARLY</field>
            <field name="sequence">70</field>
            <field name="mark_count" eval="True"/>
            <field name="used_explanation_date" eval="False"/>
            <field name="description">Giải trình cho trường hợp về sớm</field>
        </record>

        <record id="submission_type_work_from_home" model="submission.type">
            <field name="name">Làm việc từ xa (WFH)</field>
            <field name="code">WFH</field>
            <field name="sequence">80</field>
            <field name="mark_count" eval="False"/>
            <field name="used_explanation_date" eval="True"/>
            <field name="description">Giải trình cho trường hợp làm việc từ xa/tại nhà</field>
        </record>

        <record id="submission_type_business_trip" model="submission.type">
            <field name="name">Công tác</field>
            <field name="code">BUSINESS_TRIP</field>
            <field name="sequence">90</field>
            <field name="mark_count" eval="False"/>
            <field name="used_explanation_date" eval="True"/>
            <field name="description">Giải trình cho trường hợp đi công tác</field>
        </record>

        <record id="submission_type_other" model="submission.type">
            <field name="name">Lý do khác</field>
            <field name="code">OTHER</field>
            <field name="sequence">99</field>
            <field name="mark_count" eval="True"/>
            <field name="used_explanation_date" eval="False"/>
            <field name="description">Các lý do giải trình khác</field>
        </record>
    </data>
</odoo>
