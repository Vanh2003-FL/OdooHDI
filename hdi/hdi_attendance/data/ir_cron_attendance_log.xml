<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron Job: Process Pending Attendance Logs -->
        <record id="ir_cron_process_attendance_log" model="ir.cron">
            <field name="name">HDI: Process Pending Attendance Logs</field>
            <field name="model_id" ref="model_hr_attendance_log"/>
            <field name="state">code</field>
            <field name="code">model.cron_process_pending_logs()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron Job: Auto Logout for Missing Check-out -->
        <record id="ir_cron_auto_logout_attendance" model="ir.cron">
            <field name="name">HDI: Auto Logout Missing Check-out</field>
            <field name="model_id" ref="model_hr_attendance"/>
            <field name="state">code</field>
            <field name="code">model.auto_log_out_job()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).replace(hour=23, minute=59, second=0)"/>
            <field name="active" eval="True"/>
            <field name="priority">10</field>
        </record>
    </data>
</odoo>
