<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sample Warehouse Layout -->
    <record id="layout_warehouse_main" model="warehouse.layout">
        <field name="name">Kho Chính</field>
        <field name="warehouse_id" ref="stock.warehouse0"/>
        <field name="description">Sơ đồ 3D kho chính với rack storage</field>
        <field name="max_x">30</field>
        <field name="max_y">20</field>
        <field name="max_z">6</field>
        <field name="grid_unit">meter</field>
        <field name="is_active">True</field>
        <field name="is_3d_enabled">True</field>
    </record>

    <!-- Sample Locations với Tọa Độ 3D -->
    <!-- Aisle A - Level 1 -->
    <record id="location_a1_01" model="stock.location">
        <field name="name">A1-01</field>
        <field name="location_id" ref="stock.stock_location_stock"/>
        <field name="usage">internal</field>
        <field name="warehouse_layout_id" ref="layout_warehouse_main"/>
        <field name="coordinate_x">2</field>
        <field name="coordinate_y">2</field>
        <field name="coordinate_z">1</field>
        <field name="max_volume">5.0</field>
        <field name="max_weight">1000</field>
        <field name="color_code_hex">#4CAF50</field>
        <field name="location_3d_type">rack_section</field>
        <field name="moving_class">a</field>
        <field name="storage_type">rack</field>
    </record>

    <record id="location_a1_02" model="stock.location">
