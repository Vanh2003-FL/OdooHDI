<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sequence for Batch Numbers -->
    <record id="seq_hdi_batch" model="ir.sequence">
        <field name="name">Batch/LPN Sequence</field>
        <field name="code">hdi.batch</field>
        <field name="prefix">BATCH-</field>
        <field name="padding">6</field>
        <field name="number_increment">1</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- Sequence for Picking List Numbers -->
    <record id="seq_hdi_picking_list" model="ir.sequence">
        <field name="name">Picking List Sequence</field>
        <field name="code">hdi.picking.list</field>
        <field name="prefix">PKL-</field>
        <field name="padding">6</field>
        <field name="number_increment">1</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- Sequence for Inventory Check Batch -->
    <record id="seq_hdi_inventory_check_batch" model="ir.sequence">
        <field name="name">Inventory Check Batch Sequence</field>
        <field name="code">hdi.inventory.check.batch</field>
        <field name="prefix">KK-BATCH-</field>
        <field name="padding">5</field>
        <field name="number_increment">1</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- Sequence for Inventory Check Barcode -->
    <record id="seq_hdi_inventory_check_barcode" model="ir.sequence">
        <field name="name">Inventory Check Barcode Sequence</field>
        <field name="code">hdi.inventory.check.barcode</field>
        <field name="prefix">KK-BARCODE-</field>
        <field name="padding">5</field>
        <field name="number_increment">1</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- Sequence for WMS Receipt (for NK_NV_02, 03, 04) -->
    <record id="seq_hdi_wms_receipt" model="ir.sequence">
        <field name="name">WMS Receipt Sequence</field>
        <field name="code">hdi.wms.receipt</field>
        <field name="prefix">WMS-REC-</field>
        <field name="padding">6</field>
        <field name="number_increment">1</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- Default Product ABC Classification (if not exists) -->
    <!-- Add to product.product if needed -->
    
</odoo>
