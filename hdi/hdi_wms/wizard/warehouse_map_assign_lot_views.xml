<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ===== WAREHOUSE MAP ASSIGN LOT WIZARD ===== -->
    <record id="view_warehouse_map_assign_lot_wizard" model="ir.ui.view">
        <field name="name">warehouse.map.assign.lot.wizard.form</field>
        <field name="model">warehouse.map.assign.lot.wizard</field>
        <field name="arch" type="xml">
            <form string="Gán Lot vào Vị trí Lưới">
                <group>
                    <group string="Vị trí">
                        <field name="layout_id"/>
                        <field name="position_x"/>
                        <field name="position_y"/>
                        <field name="position_z"/>
                        <field name="warehouse_id"/>
                    </group>
                </group>

                <separator string="Chọn phương thức"/>
                <group>
                    <field name="option" widget="radio"/>
                </group>

                <group attrs="{'invisible': [('option', '!=', 'existing')]}">
                    <label string="Chọn Lot hiện có" for="quant_id" class="oe_edit_only"/>
                    <field name="quant_id"/>
                </group>

                <group attrs="{'invisible': [('option', '!=', 'new')]}">
                    <label string="Thông tin Quant mới" class="oe_edit_only"/>
                    <group>
                        <field name="product_id" required="1"/>
                        <field name="lot_id"/>
                        <field name="quantity"/>
                    </group>
                </group>

                <footer>
                    <button name="action_assign" string="Xác nhận" type="object" class="btn-primary"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- ===== ACTION ===== -->
    <record id="action_warehouse_map_assign_lot_wizard" model="ir.actions.act_window">
        <field name="name">Gán Lot vào Lưới</field>
        <field name="res_model">warehouse.map.assign.lot.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
