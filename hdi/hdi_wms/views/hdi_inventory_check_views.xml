    <?xml version="1.0" encoding="utf-8"?>
    <odoo>
        <!-- Inventory Check Form View -->
        <record id="view_hdi_inventory_check_form" model="ir.ui.view">
            <field name="name">hdi.inventory.check.form</field>
            <field name="model">hdi.inventory.check</field>
            <field name="arch" type="xml">
                <form string="Kiểm kê WMS">
                    <header>
                        <button name="action_start_check" string="Bắt đầu kiểm kê"
                                type="object" class="btn-primary"
                                invisible="state != 'draft'"/>
                        <button name="action_complete_check" string="Hoàn thành kiểm kê"
                                type="object" class="btn-success"
                                invisible="state != 'in_progress'"/>
                        <button name="action_approve" string="Duyệt"
                                type="object" class="btn-primary"
                                invisible="state != 'review'"/>
                        <button name="action_cancel" string="Hủy"
                                type="object"
                                invisible="state in ('done', 'cancel')"/>
                        <field name="state" widget="statusbar"
                            statusbar_visible="draft,in_progress,review,done"/>
                    </header>
                    
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object"
                                    name="action_view_adjustments" icon="fa-exchange"
                                    invisible="state != 'done'">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Điều chỉnh</span>
                                </div>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="check_type" widget="radio"
                                    readonly="state != 'draft'"/>
                                <field name="location_id"
                                    readonly="state != 'draft'"/>
                                <field name="warehouse_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="responsible_id"
                                    readonly="state != 'draft'"/>
                                <field name="scheduled_date"
                                    readonly="state != 'draft'"/>
                                <field name="actual_start_date" readonly="1"
                                    invisible="not actual_start_date"/>
                                <field name="actual_end_date" readonly="1"
                                    invisible="not actual_end_date"/>
                            </group>
                        </group>
                        
                        <!-- Scanning section (only for barcode check) -->
                        <group string="Quét Barcode" 
                            invisible="check_type != 'barcode' or state not in ('in_progress', 'review')">
                            <group>
                                <field name="scan_mode" widget="radio"
                                    options="{'horizontal': true}"/>
                                <field name="last_scanned_code" readonly="1"
                                    placeholder="Chưa quét mã nào"/>
                            </group>
                            <group>
                                <field name="scanned_count" readonly="1"/>
                            </group>
                        </group>
                        
                        <!-- Statistics -->
                        <group string="Thống kê">
                            <group>
                                <field name="total_lines" readonly="1"/>
                                <field name="checked_lines" readonly="1"/>
                            </group>
                            <group>
                                <field name="discrepancy_lines" readonly="1"/>
                            </group>
                        </group>
                        
                        <!-- Approval info -->
                        <group string="Thông tin duyệt"
                            invisible="state != 'done'">
                            <group>
                                <field name="approved_by" readonly="1"/>
                                <field name="approval_date" readonly="1"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Chi tiết kiểm kê" name="lines">
                                <field name="line_ids">
                                    <list editable="bottom"
                                        decoration-success="is_checked and not has_discrepancy"
                                        decoration-danger="has_discrepancy"
                                        decoration-muted="not is_checked">
                                        <field name="sequence" widget="handle"/>
                                        <field name="product_id" readonly="1"/>
                                        <field name="location_id" readonly="1"/>
                                        <field name="batch_id" readonly="1"
                                            optional="show"/>
                                        <field name="system_qty" readonly="1"/>
                                        <field name="actual_qty"/>
                                        <field name="scanned_qty" readonly="1"
                                            optional="show"/>
                                        <field name="discrepancy_qty" readonly="1"/>
                                        <field name="is_checked"/>
                                        <field name="has_discrepancy" invisible="1"/>
                                        <field name="notes" optional="show"/>
                                        <button name="action_confirm_check"
                                                type="object"
                                                icon="fa-check"
                                                title="Xác nhận đã kiểm"
                                                invisible="is_checked"/>
                                    </list>
                                </field>
                            </page>
                            
                            <page string="Ghi chú" name="notes">
                                <field name="notes" placeholder="Ghi chú về phiếu kiểm kê..."/>
                            </page>
                        </notebook>
                    </sheet>
                    
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Inventory Check List View -->
        <record id="view_hdi_inventory_check_list" model="ir.ui.view">
            <field name="name">hdi.inventory.check.list</field>
            <field name="model">hdi.inventory.check</field>
            <field name="arch" type="xml">
                <list string="Kiểm kê WMS"
                    decoration-info="state == 'draft'"
                    decoration-warning="state == 'in_progress'"
                    decoration-success="state == 'done'">
                    <field name="name"/>
                    <field name="check_type" widget="badge"
                        decoration-primary="check_type == 'batch'"
                        decoration-info="check_type == 'barcode'"/>
                    <field name="location_id"/>
                    <field name="warehouse_id" optional="hide"/>
                    <field name="responsible_id"/>
                    <field name="scheduled_date"/>
                    <field name="total_lines"/>
                    <field name="checked_lines"/>
                    <field name="discrepancy_lines"/>
                    <field name="state" widget="badge"
                        decoration-info="state == 'draft'"
                        decoration-warning="state in ('in_progress', 'review')"
                        decoration-success="state == 'done'"
                        decoration-muted="state == 'cancel'"/>
                </list>
            </field>
        </record>

        <!-- Inventory Check Kanban View -->
        <record id="view_hdi_inventory_check_kanban" model="ir.ui.view">
            <field name="name">hdi.inventory.check.kanban</field>
            <field name="model">hdi.inventory.check</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="check_type"/>
                    <field name="location_id"/>
                    <field name="responsible_id"/>
                    <field name="state"/>
                    <field name="checked_lines"/>
                    <field name="total_lines"/>
                    <field name="discrepancy_lines"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="location_id"/>
                                        </div>
                                    </div>
                                    <span class="badge badge-pill"
                                        t-attf-class="badge-{{record.check_type.raw_value == 'batch' ? 'primary' : 'info'}}">
                                        <field name="check_type"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="responsible_id" widget="many2one_avatar_user"/>
                                    <div>
                                        Đã kiểm: <field name="checked_lines"/>/<field name="total_lines"/>
                                    </div>
                                    <div t-if="record.discrepancy_lines.raw_value > 0"
                                        class="text-danger">
                                        Chênh lệch: <field name="discrepancy_lines"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="scheduled_date" widget="date"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label"
                                            options="{'classes': {'draft': 'secondary', 'in_progress': 'warning', 'review': 'info', 'done': 'success', 'cancel': 'default'}}"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Inventory Check Search View -->
        <record id="view_hdi_inventory_check_search" model="ir.ui.view">
            <field name="name">hdi.inventory.check.search</field>
            <field name="model">hdi.inventory.check</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm kiểm kê">
                    <field name="name"/>
                    <field name="location_id"/>
                    <field name="responsible_id"/>
                    <field name="warehouse_id"/>
                    
                    <filter string="Nháp" name="draft"
                            domain="[('state', '=', 'draft')]"/>
                    <filter string="Đang kiểm kê" name="in_progress"
                            domain="[('state', '=', 'in_progress')]"/>
                    <filter string="Chờ duyệt" name="review"
                            domain="[('state', '=', 'review')]"/>
                    <filter string="Hoàn thành" name="done"
                            domain="[('state', '=', 'done')]"/>
                    
                    <separator/>
                    <filter string="Kiểm kê Batch" name="batch"
                            domain="[('check_type', '=', 'batch')]"/>
                    <filter string="Kiểm kê Barcode" name="barcode"
                            domain="[('check_type', '=', 'barcode')]"/>
                    
                    <separator/>
                    <filter string="Có chênh lệch" name="has_discrepancy"
                            domain="[('discrepancy_lines', '>', 0)]"/>
                    
                    <group expand="0" string="Nhóm theo">
                        <filter string="Loại kiểm kê" name="group_check_type"
                                context="{'group_by': 'check_type'}"/>
                        <filter string="Trạng thái" name="group_state"
                                context="{'group_by': 'state'}"/>
                        <filter string="Vị trí" name="group_location"
                                context="{'group_by': 'location_id'}"/>
                        <filter string="Kho" name="group_warehouse"
                                context="{'group_by': 'warehouse_id'}"/>
                        <filter string="Người phụ trách" name="group_responsible"
                                context="{'group_by': 'responsible_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Inventory Check Actions -->
        <record id="action_hdi_inventory_check" model="ir.actions.act_window">
            <field name="name">Kiểm kê WMS</field>
            <field name="res_model">hdi.inventory.check</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="search_view_id" ref="view_hdi_inventory_check_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tạo phiếu kiểm kê WMS
                </p>
                <p>
                    Chọn loại kiểm kê:<br/>
                    • <b>KK_NV_01:</b> Kiểm kê theo Batch/LPN<br/>
                    • <b>KK_NV_02:</b> Kiểm kê theo Barcode
                </p>
            </field>
        </record>

        <!-- Menu Items -->
        <menuitem id="menu_hdi_inventory_check"
                name="Kiểm kê"
                parent="stock.menu_stock_warehouse_mgmt"
                action="action_hdi_inventory_check"
                sequence="30"
                groups="hdi_wms.group_wms_user"/>

    </odoo>
