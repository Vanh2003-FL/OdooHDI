<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ===== BATCH PLACEMENT WIZARD ===== -->
    <record id="view_batch_placement_wizard_form" model="ir.ui.view">
        <field name="name">hdi.batch.placement.wizard.form</field>
        <field name="model">hdi.batch.placement.wizard</field>
        <field name="arch" type="xml">
            <form string="Place Batch in Grid">
                <sheet>
                    <div class="oe_title">
                        <h1>Place Batch in Grid Location</h1>
                    </div>

                    <group>
                        <group string="Target Location">
                            <field name="grid_location_id" readonly="1"/>
                            <field name="layout_id" readonly="1"/>
                            <field name="position_code" readonly="1"/>
                            <field name="location_id"/>
                        </group>
                    </group>

                    <group string="Select Batch">
                        <field name="batch_id" widget="many2one" required="1"/>
                        <field name="batch_type" readonly="1"/>
                        <field name="batch_product" readonly="1"/>
                    </group>

                    <group string="Batch Details">
                        <group>
                            <field name="batch_quantity" readonly="1"/>
                            <field name="batch_weight" readonly="1"/>
                        </group>
                    </group>

                    <group string="Capacity Verification">
                        <field name="capacity_message" readonly="1"/>
                        <div class="alert alert-info" attrs="{'invisible': [('capacity_ok', '=', False)]}">
                            ✓ Capacity is sufficient for this batch
                        </div>
                        <div class="alert alert-danger" attrs="{'invisible': [('capacity_ok', '=', True)]}">
                            ✗ <field name="capacity_message" readonly="1" class="oe_inline"/>
                        </div>
                    </group>

                    <field name="notes" nolabel="1" placeholder="Notes"/>
                </sheet>
                <footer>
                    <button name="action_place_batch" string="Place Batch" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- ===== BATCH RELOCATION WIZARD ===== -->
    <record id="view_batch_relocation_wizard_form" model="ir.ui.view">
        <field name="name">hdi.batch.relocation.wizard.form</field>
        <field name="model">hdi.batch.relocation.wizard</field>
        <field name="arch" type="xml">
            <form string="Relocate Batch">
                <sheet>
                    <div class="oe_title">
                        <h1>Relocate Batch to Another Location</h1>
                    </div>

                    <group>
                        <group string="Current Location">
                            <field name="batch_id" readonly="1"/>
                            <field name="from_grid_location_id" readonly="1"/>
                        </group>
                    </group>

                    <group>
                        <group string="Destination">
                            <field name="layout_id" required="1"/>
                            <field name="to_grid_location_id" required="1"/>
                        </group>

                        <group string="Reason">
                            <field name="relocation_reason" required="1"/>
                        </group>
                    </group>

                    <field name="notes" nolabel="1" placeholder="Additional notes about relocation"/>
                </sheet>
                <footer>
                    <button name="action_relocate_batch" string="Relocate" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- ===== BATCH WAREHOUSE TRANSFER WIZARD ===== -->
    <record id="view_batch_warehouse_transfer_wizard_form" model="ir.ui.view">
        <field name="name">hdi.batch.warehouse.transfer.wizard.form</field>
        <field name="model">hdi.batch.warehouse.transfer.wizard</field>
        <field name="arch" type="xml">
            <form string="Transfer Batch to Another Warehouse">
                <sheet>
                    <div class="oe_title">
                        <h1>Transfer Batch to Warehouse</h1>
                    </div>

                    <group>
                        <group string="Current Warehouse">
                            <field name="batch_id" readonly="1"/>
                            <field name="from_warehouse_id" readonly="1"/>
                        </group>

                        <group string="Destination Warehouse">
                            <field name="to_warehouse_id" required="1"/>
                        </group>
                    </group>

                    <group>
                        <group string="Transfer Details">
                            <field name="transfer_reason" required="1"/>
                        </group>
                    </group>

                    <field name="notes" nolabel="1" placeholder="Notes about the transfer"/>
                </sheet>
                <footer>
                    <button name="action_transfer_batch" string="Create Transfer" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
