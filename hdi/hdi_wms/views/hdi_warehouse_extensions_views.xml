<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ===== EXTEND STOCK.LOCATION WITH GRID LINK ===== -->
    <record id="view_stock_location_form_grid" model="ir.ui.view">
        <field name="name">stock.location.form.grid</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <notebook>
                    <page string="WMS Grid">
                        <group>
                            <group string="Grid Information">
                                <field name="is_grid_enabled" readonly="1"/>
                                <field name="grid_location_id" readonly="1"/>
                                <field name="grid_position_code" readonly="1"/>
                            </group>
                            <group string="Grid Position">
                                <field name="grid_row" readonly="1"/>
                                <field name="grid_column" readonly="1"/>
                                <field name="grid_level" readonly="1"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

    <!-- ===== EXTEND STOCK.WAREHOUSE WITH LAYOUT ===== -->
    <record id="view_stock_warehouse_form_layout" model="ir.ui.view">
        <field name="name">stock.warehouse.form.layout</field>
        <field name="model">stock.warehouse</field>
        <field name="inherit_id" ref="stock.view_warehouse"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="WMS Layout">
                    <group>
                        <group string="Warehouse Layout">
                            <field name="layout_id"/>
                            <button name="action_create_layout" string="Create New Layout" type="object"
                                    class="oe_link"/>
                            <button name="action_open_layout" string="Open Layout" type="object"
                                    class="oe_highlight"/>
                        </group>
                        <group string="Layout Details">
                            <field name="layout_rows" readonly="1"/>
                            <field name="layout_columns" readonly="1"/>
                            <field name="layout_levels" readonly="1"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
