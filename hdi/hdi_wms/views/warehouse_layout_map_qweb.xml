                                        <div class="empty-cell" title="Nh·∫•n ƒë·ªÉ th√™m h√†ng">+</div>
                                    </div>
                                </t>
                            </t>
                        </div>
                    </div>

                    <!-- Footer -->
                    <div class="warehouse-map-footer">
