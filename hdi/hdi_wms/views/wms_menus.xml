<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    ✅ ĐÚNG: Đưa WMS vào trong menu Inventory (stock.menu_stock_root)
    KHÔNG tạo menu riêng cùng cấp
    -->

    <!-- WMS Submenu trong Inventory -->
    <menuitem id="menu_wms_root"
              name="Quản lý Kho"
              parent="stock.menu_stock_root"
              sequence="15"
              groups="group_wms_user"/>

    <!-- Batches/LPN -->
    <menuitem id="menu_batch"
              name="Lô hàng / Pallet"
              parent="menu_wms_root"
              action="action_batch"
              sequence="10"/>

    <!-- Picking Lists -->
    <menuitem id="menu_picking_list"
              name="Bảng kê lấy hàng"
              parent="menu_wms_root"
              action="action_picking_list"
              sequence="15"/>

    <!-- Putaway Suggestions -->
    <menuitem id="menu_putaway_suggestion"
              name="Gợi ý Đặt hàng"
              parent="menu_wms_root"
              action="action_putaway_suggestion"
              sequence="20"/>

    <!-- Loose Items -->
    <menuitem id="menu_loose_items"
              name="Hàng lẻ"
              parent="menu_wms_root"
              action="action_loose_line"
              sequence="30"/>

    <!-- Inventory Check Submenu -->
    <menuitem id="menu_inventory_check_root"
              name="Kiểm kê"
              parent="menu_wms_root"
              sequence="40"
              groups="group_wms_user"/>

    <!-- KK_NV_01: Batch Check -->
    <menuitem id="menu_inventory_check_batch"
              name="KK_NV_01 - Kiểm kê theo Batch"
              parent="menu_inventory_check_root"
              action="action_wms_inventory_check_batch"
              sequence="10"/>

    <!-- KK_NV_02: Barcode Check -->
    <menuitem id="menu_inventory_check_barcode"
              name="KK_NV_02 - Kiểm kê quét Barcode"
              parent="menu_inventory_check_root"
              action="action_wms_inventory_check_barcode"
              sequence="20"/>

    <!--
    Không cần duplicate menu Receiving/Picking/Locations
    Vì đã có sẵn trong Inventory → Operations
    WMS chỉ extend các màn hình đó, không tạo mới
    -->

</odoo>

