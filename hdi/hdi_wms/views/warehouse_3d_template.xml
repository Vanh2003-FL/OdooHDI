<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Warehouse 3D Viewer Template -->
    <template id="warehouse_3d_viewer_template" name="Warehouse 3D Viewer">
        <t t-name="warehouse.layout.3d_view">
            <div class="container-fluid" style="padding: 20px; height: 100vh; display: flex; flex-direction: column;">
                <!-- Header -->
                <div class="row mb-3">
                    <div class="col-md-8">
                        <h2>Sơ Đồ Kho 3D - <t t-esc="layout_name"/></h2>
                        <p class="text-muted"><t t-esc="warehouse_name"/> | Kích thước: <t t-esc="max_x"/>×<t t-esc="max_y"/>×<t t-esc="max_z"/> m</p>
                    </div>
                    <div class="col-md-4 text-end">
                        <button class="btn btn-secondary" id="btn-reset">Reset View</button>
                        <button class="btn btn-info" id="btn-refresh">Cập Nhật</button>
                    </div>
                </div>

                <!-- Main Content -->
                <div class="row" style="flex: 1; overflow: hidden;">
                    <!-- Canvas Area -->
                    <div class="col-md-9" style="border: 1px solid #ddd; border-radius: 5px; background: #fafafa; overflow: hidden;">
                        <div id="warehouse-3d-container" style="width: 100%; height: 100%; position: relative;">
                            <!-- Canvas will be inserted here -->
                        </div>
                    </div>

                    <!-- Info Panel -->
                    <div class="col-md-3" style="padding-left: 10px;">
                        <!-- Statistics -->
                        <div class="card mb-3">
                            <div class="card-header bg-primary text-white">
                                <strong>Thống Kê</strong>
                            </div>
                            <div class="card-body">
                                <div class="mb-2">
                                    <small class="text-muted">Vị Trí:</small>
                                    <h5><span id="stat-locations">0</span></h5>
                                </div>
                                <div class="mb-2">
                                    <small class="text-muted">Lô Hàng:</small>
                                    <h5><span id="stat-batches">0</span></h5>
                                </div>
                                <div class="mb-2">
                                    <small class="text-muted">Dung Lượng Sử Dụng:</small>
                                    <div class="progress" style="height: 20px;">
                                        <div id="stat-capacity-bar" class="progress-bar bg-success" style="width: 0%;">
                                            <span id="stat-capacity-pct">0%</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Location Details -->
                        <div class="card">
                            <div class="card-header bg-info text-white">
                                <strong>Chi Tiết Vị Trí</strong>
                            </div>
                            <div class="card-body" id="location-info">
                                <p class="text-muted text-center">Nhấn vào vị trí để xem chi tiết</p>
                            </div>
                        </div>

                        <!-- Legend -->
                        <div class="card mt-3">
                            <div class="card-header bg-secondary text-white">
                                <strong>Chuyên Biệt</strong>
                            </div>
                            <div class="card-body">
                                <div class="mb-2">
                                    <small><strong>Kéo:</strong> Để di chuyển sơ đồ</small>
                                </div>
                                <div class="mb-2">
                                    <small><strong>Cuộn:</strong> Để phóng to/Thu nhỏ</small>
                                </div>
                                <div>
                                    <small><strong>Nhấn:</strong> Để xem chi tiết vị trí</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Footer -->
                <div class="row mt-3">
                    <div class="col-12">
                        <small class="text-muted">
                            Dùng chuột để di chuyển | Cuộn để zoom | Nhấn vị trí để xem chi tiết
                        </small>
                    </div>
                </div>
            </div>

            <style>
                #warehouse-3d-container {
                    display: flex;
                    align-items: center;
                    justify-content: center;
                }
                .card {
                    border: 1px solid #ddd;
                    border-radius: 4px;
                }
                .card-header {
                    padding: 10px 15px;
                    border-bottom: 1px solid #ddd;
                }
                .card-body {
                    padding: 15px;
                }
            </style>

            <!-- Data attributes for JavaScript -->
            <t t-set="warehouse_data" t-value="warehouse_data_json"/>
        </t>
    </template>

</odoo>
