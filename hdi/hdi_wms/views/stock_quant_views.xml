<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- âœ… INHERIT stock.quant tree - add batch_id field -->
    <record id="view_quant_tree_wms" model="ir.ui.view">
        <field name="name">stock.quant.tree.wms</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree"/>
        <field name="arch" type="xml">
            <field name="location_id" position="after">
                <field name="batch_id" optional="hide" groups="hdi_wms.group_wms_user"/>
            </field>
        </field>
    </record>

    <!-- âœ… INHERIT Inventory Adjustment form - Add 2 check workflows -->
    <record id="view_inventory_form_wms_check" model="ir.ui.view">
        <field name="name">stock.quant.inventory.form.wms.check</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_inventory_editable"/>
        <field name="arch" type="xml">
            <!-- Disable direct quant creation -->
            <xpath expr="//list" position="attributes">
                <attribute name="create">0</attribute>
            </xpath>
            
            <!-- Add check_type after location_id with better visibility -->
            <field name="location_id" position="after">
                <field name="check_type" 
                       optional="show" 
                       groups="hdi_wms.group_wms_user"
                       widget="badge"
                       decoration-info="check_type == 'batch'"
                       decoration-success="check_type == 'barcode'"/>
            </field>
            
            <!-- KK_NV_01: Show batch_id for batch check -->
            <field name="product_id" position="after">
                <field name="batch_id" 
                       domain="[('location_id', '=', location_id)]"
                       optional="hide"
                       groups="hdi_wms.group_wms_user"
                       placeholder="Chá»n Batch..."/>
            </field>
            
            <!-- KK_NV_02: Show barcode scanning fields before inventory_quantity -->
            <field name="inventory_quantity" position="before">
                <field name="scan_mode" 
                       widget="boolean_toggle" 
                       string="ðŸ” QuÃ©t" 
                       optional="hide"
                       groups="hdi_wms.group_wms_user"/>
                <field name="last_scanned_code" 
                       readonly="1" 
                       optional="hide"
                       groups="hdi_wms.group_wms_user"
                       placeholder="ChÆ°a quÃ©t"/>
                <field name="scanned_count" 
                       readonly="1" 
                       optional="hide"
                       groups="hdi_wms.group_wms_user"
                       string="ÄÃ£ quÃ©t"/>
            </field>
        </field>
    </record>

</odoo>

