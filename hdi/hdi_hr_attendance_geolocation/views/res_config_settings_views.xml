<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Inherit HR Settings -->
    <record id="res_config_settings_view_form_inherit_geolocation" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hr.geolocation</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//div[hasclass('settings')]" position="inside">
                
                <h2>Chấm công GPS</h2>
                <div class="row mt16 o_settings_container" id="hr_attendance_geolocation">
                    
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="attendance_geolocation_enabled" 
                                   widget="boolean_toggle"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="attendance_geolocation_enabled"/>
                            <div class="text-muted">
                                Tự động lấy vị trí GPS khi nhân viên check-in/check-out
                            </div>
                            
                            <div class="content-group" 
                                 invisible="not attendance_geolocation_enabled">
                                <div class="mt16">
                                    <field name="attendance_geolocation_required" 
                                           class="o_light_label"/>
                                    <label for="attendance_geolocation_required"/>
                                    <div class="text-muted">
                                        Nhân viên bắt buộc phải cho phép truy cập vị trí
                                    </div>
                                </div>
                                
                                <div class="mt16">
                                    <field name="attendance_geocoding_enabled" 
                                           class="o_light_label"/>
                                    <label for="attendance_geocoding_enabled"/>
                                    <div class="text-muted">
                                        Tự động tra cứu địa chỉ từ tọa độ GPS
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-12 col-lg-6 o_setting_box"
                         invisible="not attendance_geolocation_enabled">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="attendance_default_max_distance"/>
                            <div class="text-muted">
                                Khoảng cách tối đa cho phép từ văn phòng (km)
                            </div>
                            <div class="content-group">
                                <div class="mt16 row">
                                    <label for="attendance_default_max_distance" 
                                           class="col-3 col-lg-4 o_light_label" 
                                           string="Khoảng cách"/>
                                    <field name="attendance_default_max_distance" 
                                           class="col-9 col-lg-8"/>
                                </div>
                                <div class="mt16 row">
                                    <label for="attendance_location_timeout" 
                                           class="col-3 col-lg-4 o_light_label" 
                                           string="Timeout"/>
                                    <field name="attendance_location_timeout" 
                                           class="col-9 col-lg-8"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
                
            </xpath>
            
        </field>
    </record>

</odoo>
