<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- System Parameters for Geolocation -->
        <record id="config_param_geolocation_enabled" model="ir.config_parameter">
            <field name="key">hdi_hr_attendance_geolocation.enabled</field>
            <field name="value">True</field>
        </record>
        
        <record id="config_param_geolocation_required" model="ir.config_parameter">
            <field name="key">hdi_hr_attendance_geolocation.required</field>
            <field name="value">False</field>
        </record>
        
        <record id="config_param_default_max_distance" model="ir.config_parameter">
            <field name="key">hdi_hr_attendance_geolocation.default_max_distance</field>
            <field name="value">0.5</field>
        </record>
        
        <record id="config_param_location_timeout" model="ir.config_parameter">
            <field name="key">hdi_hr_attendance_geolocation.location_timeout</field>
            <field name="value">60</field>
        </record>
        
        <record id="config_param_geocoding_enabled" model="ir.config_parameter">
            <field name="key">hdi_hr_attendance_geolocation.geocoding_enabled</field>
            <field name="value">True</field>
        </record>
        
    </data>
</odoo>
