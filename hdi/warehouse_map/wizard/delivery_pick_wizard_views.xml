<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_delivery_pick_wizard_form" model="ir.ui.view">
        <field name="name">delivery.pick.wizard.form</field>
        <field name="model">delivery.pick.wizard</field>
        <field name="arch" type="xml">
            <form string="ðŸ“¤ Smart Picking - Delivery">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="picking_id" readonly="1" class="oe_inline"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="warehouse_map_id" readonly="1"/>
                            <field name="picking_strategy"/>
                        </group>
                        <group>
                            <field name="show_on_map" widget="boolean_toggle"/>
                        </group>
                    </group>
                    
                    <group string="ðŸŽ¯ Picking Strategy">
                        <div class="alert alert-info">
                            <p><strong>Selected Strategy:</strong> <field name="picking_strategy" readonly="1" nolabel="1" class="oe_inline"/></p>
                            <ul>
                                <li><strong>FIFO:</strong> Pick oldest stock first</li>
                                <li><strong>LIFO:</strong> Pick newest stock first</li>
                                <li><strong>FEFO:</strong> Pick expiring stock first</li>
                                <li><strong>Nearest:</strong> Pick from nearest location</li>
                            </ul>
                        </div>
                    </group>
                    
                    <notebook>
                        <page string="Pick Lines">
                            <field name="pick_line_ids" nolabel="1">
                                <tree editable="bottom" 
                                      decoration-success="available_qty >= quantity_needed"
                                      decoration-warning="available_qty < quantity_needed">
                                    <field name="product_id" readonly="1"/>
                                    <field name="quantity_needed" readonly="1"/>
                                    <field name="available_qty" readonly="1"/>
                                    <field name="suggested_location_id" readonly="1" optional="show"/>
                                    <field name="source_location_id" domain="[('usage', '=', 'internal'), ('is_pickable', '=', True)]"/>
                                    <field name="lot_id" optional="show"/>
                                    <field name="vendor_name" optional="show"/>
                                    <field name="days_in_stock" optional="show"/>
                                    <field name="location_display" readonly="1"/>
                                    <field name="map_x" optional="hide"/>
                                    <field name="map_y" optional="hide"/>
                                    <field name="location_priority" optional="hide"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                
                <footer>
                    <button string="ðŸ—ºï¸ Show on Map" name="action_show_on_map" type="object" class="btn-info"/>
                    <button string="âœ“ Apply Picking" name="action_apply_picking_locations" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
