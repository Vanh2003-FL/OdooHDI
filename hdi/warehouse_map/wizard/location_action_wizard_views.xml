<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_location_action_wizard_form" model="ir.ui.view">
        <field name="name">location.action.wizard.form</field>
        <field name="model">location.action.wizard</field>
        <field name="arch" type="xml">
            <form string="Thao tác trên vị trí kho">
                <sheet>
                    <group>
                        <group>
                            <field name="location_id" readonly="1"/>
                            <field name="action_type" widget="radio"/>
                        </group>
                        <group>
                            <field name="picking_type_id" options="{'no_create': True}"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Thông tin xuất/chuyển">
                            <group>
                                <group string="Thông tin Lot (từ sơ đồ)">
                                    <field name="product_id" readonly="1" 
                                           invisible="not product_id"
                                           options="{'no_open': True}"/>
                                    <field name="product_tracking" invisible="1"/>
                                    <field name="lot_id" readonly="1" 
                                           invisible="not lot_id"
                                           options="{'no_open': True}"/>
                                    <field name="available_qty" 
                                           string="Số lượng có sẵn"
                                           readonly="1"
                                           class="text-success"
                                           invisible="not product_id"/>
                                </group>
                                <group string="Quét Barcode và Số lượng">
                                    <field name="product_barcode_input" 
                                           placeholder="Quét barcode sản phẩm để xác nhận..."
                                           class="oe_inline"
                                           help="Quét barcode sản phẩm để xác nhận sản phẩm xuất"
                                           invisible="product_tracking == 'serial'"/>
                                    <field name="quantity" required="1" 
                                           invisible="product_tracking == 'serial'"
                                           class="oe_inline"
                                           help="Nhập số lượng cần xuất/chuyển"/>
                                </group>
                            </group>
                            
                            <!-- Serial Tracking Section -->
                            <div invisible="product_tracking != 'serial'">
                                <separator string="Quét Serial Number (từng sản phẩm)"/>
                                <group>
                                    <group>
                                        <field name="serial_barcode_input" 
                                               placeholder="Quét barcode/QR của từng sản phẩm..."
                                               class="oe_inline"
                                               help="Quét barcode hoặc QR code trên từng sản phẩm"/>
                                        <field name="scanned_serial_count" readonly="1" 
                                               string="Đã quét"/>
                                        <field name="quantity" readonly="1"
                                               string="Số lượng (tự động)"/>
                                    </group>
                                </group>
                                
                                <group>
                                    <field name="scanned_serial_ids" nolabel="1" colspan="2">
                                        <tree decoration-success="True" create="false" delete="true">
                                            <field name="serial_number" string="Serial Number"/>
                                            <field name="barcode" string="Barcode" optional="show"/>
                                            <button name="action_remove_serial" type="object" 
                                                    icon="fa-trash" 
                                                    string="Xóa"
                                                    invisible="context.get('hide_remove', False)"/>
                                        </tree>
                                    </field>
                                </group>
                                
                                <div class="alert alert-success" role="alert">
                                    <p><strong><i class="fa fa-check-circle"/> Serial đã quét: <field name="scanned_serial_count" readonly="1" class="oe_inline" nolabel="1"/></strong></p>
                                    <p>Quét barcode/QR trên từng sản phẩm để thêm vào danh sách xuất</p>
                                </div>
                            </div>
                            
                            <div class="alert alert-warning" role="alert" invisible="product_id">
                                <p><i class="fa fa-exclamation-triangle"/> Vui lòng chọn lot từ sơ đồ kho hoặc chọn thủ công ở tab "Chọn sản phẩm/Lot"</p>
                            </div>
                            <div class="alert alert-info" role="alert" invisible="not product_id or product_tracking == 'serial'">
                                <h4><i class="fa fa-info-circle"/> Hướng dẫn:</h4>
                                <ol>
                                    <li>Lot <strong><field name="lot_id" readonly="1" class="oe_inline" nolabel="1"/></strong> đã được chọn từ sơ đồ</li>
                                    <li>Quét barcode sản phẩm để xác nhận sản phẩm xuất</li>
                                    <li>Nhập số lượng cần xuất (tối đa: <strong><field name="available_qty" readonly="1" class="oe_inline" nolabel="1"/></strong>)</li>
                                    <li>Nhấn "Xác nhận" để hoàn tất</li>
                                </ol>
                            </div>
                            <div class="alert alert-info" role="alert" invisible="product_tracking != 'serial'">
                                <h4><i class="fa fa-barcode"/> Tracking theo Serial Number:</h4>
                                <ol>
                                    <li>Lot <strong><field name="lot_id" readonly="1" class="oe_inline" nolabel="1"/></strong> có <strong><field name="available_qty" readonly="1" class="oe_inline" nolabel="1"/></strong> sản phẩm</li>
                                    <li><strong>Quét barcode/QR trên TỪNG sản phẩm</strong> cần xuất</li>
                                    <li>Hệ thống sẽ tự động đếm số lượng từ serial đã quét</li>
                                    <li>Nhấn "Xác nhận" khi đã quét đủ</li>
                                </ol>
                            </div>
                        </page>
                        
                        <page string="Chọn sản phẩm/Lot" invisible="product_id">
                            <group>
                                <field name="quant_ids" widget="many2many_tags" 
                                       domain="[('location_id', '=', location_id), ('quantity', '>', 0)]"
                                       options="{'no_create': True}">
                                    <list>
                                        <field name="product_id"/>
                                        <field name="lot_id"/>
                                        <field name="quantity"/>
                                    </list>
                                </field>
                            </group>
                            <separator string="Hoặc nhập thủ công"/>
                            <group>
                                <group>
                                    <field name="product_id" options="{'no_create': True}"/>
                                    <field name="lot_id" 
                                           domain="[('product_id', '=', product_id)]"
                                           options="{'no_create': True}"
                                           invisible="not product_id"/>
                                </group>
                                <group>
                                    <field name="quantity"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Vị trí đích" invisible="action_type == 'pick'">
                            <group>
                                <field name="dest_location_id" 
                                       options="{'no_create': True}"
                                       domain="[('usage', '=', 'internal')]"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button string="Xác nhận" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Hủy" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
