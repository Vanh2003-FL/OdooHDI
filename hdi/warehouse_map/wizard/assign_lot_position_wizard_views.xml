<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_assign_lot_position_wizard_form" model="ir.ui.view">
        <field name="name">assign.lot.position.wizard.form</field>
        <field name="model">assign.lot.position.wizard</field>
        <field name="arch" type="xml">
            <form string="Gán vị trí cho Lot">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            Gán Lot vào vị trí [<field name="posx" readonly="1" class="oe_inline"/>, 
                            <field name="posy" readonly="1" class="oe_inline"/>]
                        </h1>
                    </div>
                    
                    <group>
                        <field name="warehouse_map_id" invisible="1"/>
                        <field name="location_id" invisible="1"/>
                    </group>
                    
                    <!-- Hiển thị đơn giản cho chuyển vị trí -->
                    <group string="Chọn Lot">
                        <field name="quant_id" 
                               options="{'no_create': True}"
                               domain="[('location_id', 'child_of', location_id), ('quantity', '>', 0), ('product_id.tracking', '!=', 'none')]"/>
                    </group>
                    
                    <group string="Thông tin Lot" invisible="not quant_id">
                        <group>
                            <field name="product_id"/>
                            <field name="lot_id"/>
                        </group>
                        <group>
                            <field name="quantity"/>
                        </group>
                    </group>
                    
                    <group string="Vị trí đích">
                        <group>
                            <field name="posx" readonly="0"/>
                            <field name="posy" readonly="0"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Xác nhận" type="object" name="action_assign_position" class="btn-primary"/>
                    <button string="Hủy" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Custom list view cho quants có thể chọn -->
    <record id="view_stock_quant_available_list" model="ir.ui.view">
        <field name="name">stock.quant.available.list</field>
        <field name="model">stock.quant</field>
        <field name="arch" type="xml">
            <list string="Lots khả dụng">
                <field name="product_id"/>
                <field name="lot_id"/>
                <field name="location_id"/>
                <field name="quantity"/>
                <field name="available_quantity"/>
                <field name="reserved_quantity"/>
            </list>
        </field>
    </record>
</odoo>
