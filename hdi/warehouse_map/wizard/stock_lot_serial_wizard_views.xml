<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_lot_serial_wizard_form" model="ir.ui.view">
        <field name="name">stock.lot.serial.wizard.form</field>
        <field name="model">stock.lot.serial.wizard</field>
        <field name="arch" type="xml">
            <form string="Gom Serial vào Lot">
                <group>
                    <field name="picking_id" readonly="1"/>
                    <field name="product_id" nolabel="1"/>
                    <field name="total_serials" readonly="1"/>
                </group>
                
                <separator string="NHẬP SERIAL CHO TỪNG SẢN PHẨM"/>
                <field name="wizard_move_line_ids" nolabel="1">
                    <list editable="bottom">
                        <field name="product_name" readonly="1"/>
                        <field name="serial_number" placeholder="Quét barcode hoặc nhập serial..."/>
                    </list>
                </field>
                
                <footer>
                    <button name="action_confirm_serials" string="✓ Xác nhận" type="object" class="btn-primary"/>
                    <button string="Hủy" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <act_window id="action_stock_lot_serial_wizard" 
        name="Gom Serial vào Lot"
        res_model="stock.lot.serial.wizard"
        view_mode="form"
        target="new"
        binding_model="stock.picking"/>
    
    <!-- View cho Wizard Chọn Lot (Bước 2) -->
    <record id="view_stock_lot_selection_wizard_form" model="ir.ui.view">
        <field name="name">stock.lot.selection.wizard.form</field>
        <field name="model">stock.lot.selection.wizard</field>
        <field name="arch" type="xml">
            <form string="Chọn Lot">
                <group>
                    <field name="picking_id" readonly="1"/>
                    <field name="product_id" readonly="1"/>
                </group>
                
                <separator string="CHỌN LOT"/>
                <group>
                    <field name="lot_create_option" widget="radio"/>
                </group>
                
                <!-- Option 1: Tạo lot mới -->
                <group invisible="lot_create_option != 'create_new'">
                    <field name="lot_name" placeholder="VD: LOT20260127001"/>
                    <field name="lot_barcode" placeholder="VD: LOT-20260127-001"/>
                </group>
                
                <!-- Option 2: Chọn lot đã tạo -->
                <group invisible="lot_create_option != 'select_existing'">
                    <field name="existing_lot_id"/>
                </group>
                
                <footer>
                    <button name="action_confirm_assign_serials" string="✓ Gom Serial vào Lot" type="object" class="btn-primary"/>
                    <button string="Hủy" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
