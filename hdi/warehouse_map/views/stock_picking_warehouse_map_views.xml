<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Thêm nút gán vị trí vào view picking form -->
    <record id="view_picking_form_add_warehouse_map_position" model="ir.ui.view">
        <field name="name">stock.picking.form.warehouse.map.position</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- Thêm nút gán vị trí trong header -->
            <xpath expr="//header" position="inside">
                <button name="action_assign_warehouse_map_position" type="object"
                        string="Gán vị trí"
                        invisible="picking_type_code != 'incoming' or state != 'done'"
                        class="btn-primary"
                        help="Gán vị trí cho sản phẩm/lot trên sơ đồ kho"/>
            </xpath>
        </field>
    </record>
</odoo>
