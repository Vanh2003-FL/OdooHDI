<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action cho blocked cells 3D - phải định nghĩa trước khi dùng -->
    <record id="action_warehouse_map_blocked_cell_3d" model="ir.actions.act_window">
        <field name="name">Ô bị chặn 3D</field>
        <field name="res_model">warehouse.map.blocked.cell.3d</field>
        <field name="view_mode">list,form</field>
        <field name="context">{
            'search_default_warehouse_map_3d_id': active_id,
        }</field>
        <field name="domain">[('warehouse_map_3d_id', '=', active_id)]</field>
    </record>

    <!-- Blocked cells 3D views -->
    <record id="view_warehouse_map_blocked_cell_3d_form" model="ir.ui.view">
        <field name="name">warehouse.map.blocked.cell.3d.form</field>
        <field name="model">warehouse.map.blocked.cell.3d</field>
        <field name="arch" type="xml">
            <form string="Ô bị chặn 3D">
                <sheet>
                    <group>
                        <group>
                            <field name="warehouse_map_3d_id"/>
                            <field name="posx"/>
                            <field name="posy"/>
                            <field name="posz"/>
                        </group>
                        <group>
                            <field name="reason"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_warehouse_map_blocked_cell_3d_list" model="ir.ui.view">
        <field name="name">warehouse.map.blocked.cell.3d.list</field>
        <field name="model">warehouse.map.blocked.cell.3d</field>
        <field name="arch" type="xml">
            <list string="Ô bị chặn 3D">
                <field name="warehouse_map_3d_id"/>
                <field name="posx"/>
                <field name="posy"/>
                <field name="posz"/>
                <field name="reason"/>
            </list>
        </field>
    </record>

    <!-- Form view cho warehouse map 3D -->
    <record id="view_warehouse_map_3d_form" model="ir.ui.view">
        <field name="name">warehouse.map.3d.form</field>
        <field name="model">warehouse.map.3d</field>
        <field name="arch" type="xml">
            <form string="Sơ đồ kho 3D">
                <header>
                    <button name="%(action_warehouse_map_blocked_cell_3d)d" 
                            string="Quản lý ô bị chặn 3D" 
                            type="action"
                            class="oe_highlight"
                            icon="fa-ban"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_warehouse_map_blocked_cell_3d)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-ban">
                            <field name="blocked_cell_count" widget="statinfo" string="Ô bị chặn"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Tên sơ đồ kho 3D..."/>
                        </h1>
                    </div>
                    <group>
                        <group string="Thông tin kho">
                            <field name="warehouse_id"/>
                            <field name="location_id" options="{'no_create': True}"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                        <group string="Kích thước không gian 3D">
                            <field name="columns" string="Số cột (X) - Chiều rộng"/>
                            <field name="rows" string="Số hàng (Y) - Chiều dài"/>
                            <field name="levels" string="Số tầng (Z) - Chiều cao"/>
                        </group>
                    </group>
                    
                    <group string="Kích thước thực tế (mét)">
                        <group>
                            <field name="cell_width" string="Rộng mỗi ô (m)"/>
                            <field name="cell_depth" string="Sâu mỗi ô (m)"/>
                        </group>
                        <group>
                            <field name="cell_height" string="Cao mỗi tầng (m)"/>
                        </group>
                    </group>
                    
                    <group string="Phân vùng sơ đồ 3D (Spacing)">
                        <group>
                            <field name="column_spacing_interval" 
                                   string="Khoảng cách sau mỗi X cột"
                                   help="Thêm khoảng trống sau mỗi X cột để phân vùng. VD: 3 = khoảng trống sau cột 3, 6, 9..."/>
                            <field name="row_spacing_interval" 
                                   string="Khoảng cách sau mỗi X hàng"
                                   help="Thêm khoảng trống sau mỗi X hàng để phân vùng. VD: 5 = khoảng trống sau hàng 5, 10, 15..."/>
                        </group>
                        <group>
                            <field name="level_spacing_interval"
                                   string="Khoảng cách sau mỗi X tầng"
                                   help="Thêm khoảng trống sau mỗi X tầng để phân vùng. VD: 2 = khoảng trống sau tầng 2, 4, 6..."/>
                        </group>
                    </group>
                    
                    <group string="Cài đặt hiển thị">
                        <group>
                            <field name="show_grid"/>
                            <field name="show_axes"/>
                        </group>
                        <group>
                            <field name="show_labels"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List view -->
    <record id="view_warehouse_map_3d_list" model="ir.ui.view">
        <field name="name">warehouse.map.3d.list</field>
        <field name="model">warehouse.map.3d</field>
        <field name="arch" type="xml">
            <list string="Sơ đồ kho 3D">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="warehouse_id"/>
                <field name="location_id"/>
                <field name="columns" string="Cột (X)"/>
                <field name="rows" string="Hàng (Y)"/>
                <field name="levels" string="Tầng (Z)"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Kanban view để hiển thị sơ đồ -->
    <record id="view_warehouse_map_3d_kanban" model="ir.ui.view">
        <field name="name">warehouse.map.3d.kanban</field>
        <field name="model">warehouse.map.3d</field>
        <field name="arch" type="xml">
            <kanban class="o_warehouse_map_3d_kanban">
                <field name="id"/>
                <field name="name"/>
                <field name="warehouse_id"/>
                <field name="columns"/>
                <field name="rows"/>
                <field name="levels"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="warehouse_id"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="o_kanban_tags_section mb-2">
                                    <span class="badge bg-info">
                                        <i class="fa fa-cube"/> <t t-esc="record.columns.raw_value"/> x <t t-esc="record.rows.raw_value"/> x <t t-esc="record.levels.raw_value"/>
                                    </span>
                                </div>
                                <button class="btn btn-primary" type="object" name="action_view_map_3d">
                                    <i class="fa fa-cubes"/> Xem sơ đồ 3D
                                </button>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action cho warehouse map 3D -->
    <record id="action_warehouse_map_3d" model="ir.actions.act_window">
        <field name="name">Sơ đồ kho 3D</field>
        <field name="res_model">warehouse.map.3d</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo sơ đồ kho 3D đầu tiên
            </p>
            <p>
                Sơ đồ kho 3D cho phép quản lý vị trí hàng hóa trong không gian 3 chiều với tọa độ X, Y, Z.
            </p>
        </field>
    </record>
</odoo>
