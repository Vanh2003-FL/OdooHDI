<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Receipt Putaway Wizard Action -->
    <record id="action_receipt_putaway_wizard" model="ir.actions.act_window">
        <field name="name">Smart Putaway</field>
        <field name="res_model">receipt.putaway.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
    <!-- Delivery Pick Wizard Action -->
    <record id="action_delivery_pick_wizard" model="ir.actions.act_window">
        <field name="name">Smart Picking</field>
        <field name="res_model">delivery.pick.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
    <!-- Enhanced Stock Picking Form with Warehouse Map Integration -->
    <record id="view_picking_form_with_map_integration" model="ir.ui.view">
        <field name="name">stock.picking.form.map.integration</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            
            <!-- Add warehouse map buttons in header -->
            <xpath expr="//header" position="inside">
                <button name="action_open_warehouse_map" 
                        string="M·ªü s∆° ƒë·ªì kho" 
                        type="object" 
                        class="btn-primary"
                        icon="fa-map-o"
                        invisible="not show_warehouse_map"/>
                
                <button name="action_assign_from_map" 
                        string="Ch·ªçn v·ªã tr√≠ t·ª´ Map" 
                        type="object" 
                        class="btn-secondary"
                        invisible="not map_integration_enabled or state != 'confirmed'"/>
            </xpath>
            
            <!-- Add map integration info after name -->
            <xpath expr="//field[@name='name']" position="after">
                <field name="warehouse_map_id" invisible="1"/>
                <field name="map_integration_enabled" invisible="1"/>
                <field name="show_warehouse_map" invisible="1"/>
                
                <div class="alert alert-info" role="alert" invisible="not map_integration_enabled">
                    <strong>üó∫Ô∏è Map Integration Active</strong>
                    <span> - Warehouse: </span><field name="warehouse_map_id" readonly="1" nolabel="1"/>
                </div>
            </xpath>
            
            <!-- Add suggested locations for incoming pickings -->
            <xpath expr="//notebook" position="inside">
                <page string="üìç Map Integration" name="map_integration" invisible="not map_integration_enabled">
                    <group>
                        <group string="Warehouse Map">
                            <field name="warehouse_map_id"/>
                            <button name="action_open_warehouse_map" 
                                    string="Open Map" 
                                    type="object" 
                                    class="oe_link"
                                    icon="fa-external-link"/>
                        </group>
                        
                        <group string="Suggested Locations" invisible="picking_type_code != 'incoming'">
                            <field name="suggested_location_ids" widget="many2many_tags" options="{'color_field': 'location_priority'}"/>
                        </group>
                    </group>
                    
                    <!-- Quick actions based on picking type -->
                    <group>
                        <button name="%(action_receipt_putaway_wizard)d" 
                                string="üéØ Smart Putaway (Receipt)" 
                                type="action" 
                                class="btn-primary"
                                invisible="picking_type_code != 'incoming' or state != 'confirmed'"
                                context="{'default_picking_id': id}"/>
                        
                        <button name="%(action_delivery_pick_wizard)d" 
                                string="üì¶ Smart Picking (Delivery)" 
                                type="action" 
                                class="btn-primary"
                                invisible="picking_type_code != 'outgoing' or state != 'confirmed'"
                                context="{'default_picking_id': id}"/>
                        
                        <button name="action_assign_from_map" 
                                string="üó∫Ô∏è Assign from Map (Internal)" 
                                type="object" 
                                class="btn-primary"
                                invisible="picking_type_code != 'internal' or state != 'confirmed'"/>
                    </group>
                </page>
            </xpath>
            
        </field>
    </record>

</odoo>
