<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action window để gán vị trí từ stock.move.line -->
    <record id="action_move_line_warehouse_map_wizard" model="ir.actions.act_window">
        <field name="name">Gán vị trí trên sơ đồ kho</field>
        <field name="res_model">move.line.warehouse.map.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_move_line_id': active_id, 'default_picking_id': parent.picking_id}</field>
    </record>

    <!-- Binding action để gọi wizard từ stock.move.line -->
    <record id="ir_actions_server_assign_position" model="ir.actions.server">
        <field name="name">Gán vị trí sản phẩm/Lot</field>
        <field name="model_id" ref="stock.model_stock_move_line"/>
        <field name="binding_model_id" ref="stock.model_stock_move_line"/>
        <field name="binding_view_types">form</field>
        <field name="state">code</field>
        <field name="code">
if records:
    action = records[0].action_assign_warehouse_map_position()
        </field>
    </record>

    <!-- Server Action: Gom Serial vào Lot từ Picking -->
    <record id="action_stock_lot_serial_from_picking" model="ir.actions.server">
        <field name="name">Gom Serial vào Lot</field>
        <field name="model_id" ref="stock.model_stock_picking"/>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_view_types">form</field>
        <field name="state">code</field>
        <field name="code">
if records:
    action = records[0].action_assign_serials_to_lot()
        </field>
    </record>
</odoo>
