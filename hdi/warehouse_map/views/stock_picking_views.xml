<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Override stock.picking form để thêm nút gom serial vào lot -->
    <record id="view_picking_form_warehouse_map" model="ir.ui.view">
        <field name="name">stock.picking.form.warehouse.map</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- Thêm nút gom serial vào lot trong header -->
            <xpath expr="//header" position="inside">
                <button name="action_assign_serials_to_lot" 
                        type="object" 
                        string="Gom Serial vào Lot" 
                        invisible="picking_type_code != 'incoming' or state == 'done' or state == 'cancel'"
                        help="Chọn và gom nhiều serial vào 1 lot"/>
            </xpath>
        </field>
    </record>
</odoo>
