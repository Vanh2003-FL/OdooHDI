<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- History List View -->
    <record id="view_bin_history_tree" model="ir.ui.view">
        <field name="name">bin.history.list</field>
        <field name="model">bin.history</field>
        <field name="arch" type="xml">
            <list string="Bin Movement History" create="0" edit="0">
                <field name="date"/>
                <field name="bin_id"/>
                <field name="operation_type" 
                       decoration-success="operation_type == 'in'"
                       decoration-danger="operation_type == 'out'"/>
                <field name="product_id"/>
                <field name="lot_id"/>
                <field name="quantity"/>
                <field name="uom_id"/>
                <field name="reference"/>
                <field name="user_id"/>
            </list>
        </field>
    </record>
    
    <!-- History Form View -->
    <record id="view_bin_history_form" model="ir.ui.view">
        <field name="name">bin.history.form</field>
        <field name="model">bin.history</field>
        <field name="arch" type="xml">
            <form string="Bin History" create="0" edit="0">
                <sheet>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="bin_id"/>
                            <field name="operation_type"/>
                        </group>
                        <group>
                            <field name="product_id"/>
                            <field name="lot_id"/>
                            <field name="quantity"/>
                            <field name="uom_id"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="reference"/>
                            <field name="move_id"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- History Search View -->
    <record id="view_bin_history_search" model="ir.ui.view">
        <field name="name">bin.history.search</field>
        <field name="model">bin.history</field>
        <field name="arch" type="xml">
            <search string="Search Bin History">
                <field name="bin_id"/>
                <field name="product_id"/>
                <field name="lot_id"/>
                <field name="reference"/>
                <separator/>
                <filter string="Incoming" name="incoming" domain="[('operation_type', '=', 'in')]"/>
                <filter string="Outgoing" name="outgoing" domain="[('operation_type', '=', 'out')]"/>
                <separator/>
                <filter string="Today" name="today" 
                        domain="[('date', '&gt;=', context_today().strftime('%Y-%m-%d 00:00:00')), 
                                 ('date', '&lt;=', context_today().strftime('%Y-%m-%d 23:59:59'))]"/>
                <filter string="This Week" name="this_week" 
                        domain="[('date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Bin" name="group_bin" context="{'group_by': 'bin_id'}"/>
                    <filter string="Product" name="group_product" context="{'group_by': 'product_id'}"/>
                    <filter string="Operation" name="group_operation" context="{'group_by': 'operation_type'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- History Action -->
    <record id="action_bin_history" model="ir.actions.act_window">
        <field name="name">Bin Movement History</field>
        <field name="res_model">bin.history</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_this_week': 1}</field>
    </record>
</odoo>
