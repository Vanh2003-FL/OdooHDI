<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Bin Tree View -->
    <record id="view_warehouse_bin_tree" model="ir.ui.view">
        <field name="name">warehouse.bin.tree</field>
        <field name="model">warehouse.bin</field>
        <field name="arch" type="xml">
            <tree string="Warehouse Bins" decoration-danger="is_blocked" decoration-muted="state == 'empty'">
                <field name="complete_name"/>
                <field name="zone_id"/>
                <field name="aisle_id"/>
                <field name="rack_id"/>
                <field name="level_id"/>
                <field name="state" widget="badge" 
                       decoration-secondary="state == 'empty'"
                       decoration-success="state == 'available'"
                       decoration-warning="state == 'reserved'"
                       decoration-danger="state == 'full' or state == 'blocked'"/>
                <field name="current_sku"/>
                <field name="current_lot_id"/>
                <field name="total_quantity"/>
                <field name="capacity_utilization" widget="progressbar"/>
                <field name="is_blocked" widget="boolean_toggle"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>
    
    <!-- Bin Form View -->
    <record id="view_warehouse_bin_form" model="ir.ui.view">
        <field name="name">warehouse.bin.form</field>
        <field name="model">warehouse.bin</field>
        <field name="arch" type="xml">
            <form string="Warehouse Bin">
                <header>
                    <button name="action_block_bin" 
                            string="Block Bin" 
                            type="object"
                            class="oe_highlight"
                            invisible="is_blocked"/>
                    <button name="action_unblock_bin" 
                            string="Unblock Bin" 
                            type="object"
                            class="btn-danger"
                            invisible="not is_blocked"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_quants" 
                                type="object"
                                class="oe_stat_button"
                                icon="fa-cubes">
                            <field name="total_quantity" widget="statinfo" string="Quantity"/>
                        </button>
                        <button name="action_view_history" 
                                type="object"
                                class="oe_stat_button"
                                icon="fa-history">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">History</span>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Blocked" bg_color="text-bg-danger" 
                            invisible="not is_blocked"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="complete_name"/>
                            <field name="bin_number"/>
                        </group>
                        <group>
                            <field name="level_id"/>
                            <field name="rack_id"/>
                            <field name="aisle_id"/>
                            <field name="zone_id"/>
                            <field name="warehouse_id"/>
                        </group>
                    </group>
                    <group>
                        <group string="Location">
                            <field name="location_id"/>
                            <field name="coordinate_x"/>
                            <field name="coordinate_y"/>
                            <field name="coordinate_z"/>
                        </group>
                        <group string="Current Content">
                            <field name="current_product_id"/>
                            <field name="current_sku"/>
                            <field name="current_lot_id"/>
                            <field name="total_quantity"/>
                        </group>
                    </group>
                    <group string="Physical Properties">
                        <group>
                            <field name="width"/>
                            <field name="depth"/>
                            <field name="height"/>
                            <field name="capacity"/>
                        </group>
                        <group>
                            <field name="max_weight"/>
                            <field name="used_capacity"/>
                            <field name="capacity_utilization" widget="progressbar"/>
                        </group>
                    </group>
                    <group string="Configuration">
                        <group>
                            <field name="enforce_single_lot"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="is_blocked"/>
                            <field name="block_reason" invisible="not is_blocked"/>
                            <field name="blocked_date" invisible="not is_blocked"/>
                            <field name="blocked_by" invisible="not is_blocked"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Stock" name="stock">
                            <field name="quant_ids">
                                <tree>
                                    <field name="product_id"/>
                                    <field name="lot_id"/>
                                    <field name="quantity"/>
                                    <field name="reserved_quantity"/>
                                    <field name="available_quantity"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Movement History" name="history">
                            <field name="history_ids">
                                <tree>
                                    <field name="date"/>
                                    <field name="operation_type"/>
                                    <field name="product_id"/>
                                    <field name="lot_id"/>
                                    <field name="quantity"/>
                                    <field name="reference"/>
                                    <field name="user_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Visualization" name="visualization">
                            <group>
                                <field name="display_color" widget="color"/>
                                <field name="last_movement_date"/>
                            </group>
                        </page>
                        <page string="Description" name="description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Bin Kanban View -->
    <record id="view_warehouse_bin_kanban" model="ir.ui.view">
        <field name="name">warehouse.bin.kanban</field>
        <field name="model">warehouse.bin</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="complete_name"/>
                <field name="state"/>
                <field name="display_color"/>
                <field name="current_sku"/>
                <field name="current_lot_id"/>
                <field name="total_quantity"/>
                <field name="capacity_utilization"/>
                <field name="is_blocked"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click" 
                             t-att-style="'border-left: 5px solid ' + record.display_color.raw_value"
                             t-attf-class="{{record.is_blocked.raw_value ? 'o_kanban_record_blocked' : ''}}">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="complete_name"/>
                                    </strong>
                                </div>
                                <span class="badge rounded-pill" t-att-class="
                                    record.state.raw_value === 'empty' ? 'text-bg-secondary' :
                                    record.state.raw_value === 'available' ? 'text-bg-success' :
                                    record.state.raw_value === 'full' ? 'text-bg-danger' :
                                    'text-bg-dark'">
                                    <field name="state"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div t-if="record.current_sku.raw_value">
                                    <strong>SKU:</strong> <field name="current_sku"/>
                                </div>
                                <div t-if="record.current_lot_id.raw_value">
                                    <strong>Lot:</strong> <field name="current_lot_id"/>
                                </div>
                                <div t-if="record.total_quantity.raw_value">
                                    <strong>Qty:</strong> <field name="total_quantity"/>
                                </div>
                                <div class="mt-2">
                                    <field name="capacity_utilization" widget="progressbar"/>
                                </div>
                                <div t-if="record.is_blocked.raw_value" class="text-danger mt-2">
                                    <i class="fa fa-ban"/> BLOCKED
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Bin Search View -->
    <record id="view_warehouse_bin_search" model="ir.ui.view">
        <field name="name">warehouse.bin.search</field>
        <field name="model">warehouse.bin</field>
        <field name="arch" type="xml">
            <search string="Search Bins">
                <field name="complete_name"/>
                <field name="code"/>
                <field name="zone_id"/>
                <field name="aisle_id"/>
                <field name="rack_id"/>
                <field name="current_sku"/>
                <field name="current_lot_id"/>
                <separator/>
                <filter string="Empty" name="empty" domain="[('state', '=', 'empty')]"/>
                <filter string="Available" name="available" domain="[('state', '=', 'available')]"/>
                <filter string="Full" name="full" domain="[('state', '=', 'full')]"/>
                <filter string="Blocked" name="blocked" domain="[('is_blocked', '=', True)]"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Zone" name="group_zone" context="{'group_by': 'zone_id'}"/>
                    <filter string="Aisle" name="group_aisle" context="{'group_by': 'aisle_id'}"/>
                    <filter string="Rack" name="group_rack" context="{'group_by': 'rack_id'}"/>
                    <filter string="Level" name="group_level" context="{'group_by': 'level_id'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Bin Action -->
    <record id="action_warehouse_bin" model="ir.actions.act_window">
        <field name="name">Warehouse Bins</field>
        <field name="res_model">warehouse.bin</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Warehouse Bin
            </p>
            <p>
                Bins are the smallest storage unit in your warehouse. Each bin corresponds to a unique stock location.
            </p>
        </field>
    </record>
    
    <!-- Blocked Bins Action -->
    <record id="action_blocked_bins" model="ir.actions.act_window">
        <field name="name">Blocked Bins</field>
        <field name="res_model">warehouse.bin</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="domain">[('is_blocked', '=', True)]</field>
        <field name="context">{'search_default_blocked': 1}</field>
    </record>
</odoo>
