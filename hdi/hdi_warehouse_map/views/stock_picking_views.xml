<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend Stock Picking Form View -->
    <record id="view_stock_picking_form_inherit" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_view_warehouse_map" 
                        type="object"
                        class="oe_stat_button"
                        icon="fa-map"
                        invisible="state in ['done', 'cancel']">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Warehouse Map</span>
                    </div>
                </button>
            </div>
            <button name="button_validate" position="before">
                <button name="action_suggest_putaway_bins" 
                        string="Suggest Bins" 
                        type="object"
                        class="btn-primary"
                        invisible="state not in ['confirmed', 'assigned'] or picking_type_code != 'incoming'"/>
            </button>
            <xpath expr="//field[@name='move_ids_without_package']/tree//field[@name='location_id']" position="after">
                <field name="source_bin_id" optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='move_ids_without_package']/tree//field[@name='location_dest_id']" position="after">
                <field name="dest_bin_id" optional="hide"/>
                <field name="suggested_bin_id" optional="hide" 
                       decoration-success="suggested_bin_id"
                       widget="badge"/>
            </xpath>
        </field>
    </record>
    
    <!-- Blocked Lots Action -->
    <record id="action_blocked_lots" model="ir.actions.act_window">
        <field name="name">Blocked Lots</field>
        <field name="res_model">stock.lot</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_blocked', '=', True)]</field>
    </record>
</odoo>
