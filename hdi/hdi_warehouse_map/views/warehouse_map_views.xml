<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Warehouse Map Main View -->
    <record id="view_warehouse_map_main" model="ir.ui.view">
        <field name="name">warehouse.map.main</field>
        <field name="model">stock.warehouse</field>
        <field name="arch" type="xml">
            <form string="Warehouse Map">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="company_id" readonly="1"/>
                            <field name="lot_stock_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="2D Warehouse Map" name="map_2d">
                            <div class="alert alert-info">
                                <p><strong>2D Warehouse Map</strong></p>
                                <p>Use JavaScript client action to view 2D warehouse map.</p>
                            </div>
                        </page>
                        
                        <page string="3D Warehouse View" name="map_3d">
                            <div class="alert alert-info">
                                <p><strong>3D Warehouse View</strong></p>
                                <p>Use JavaScript client action to view 3D warehouse map.</p>
                            </div>
                        </page>
                        
                        <page string="Layout Configuration" name="layout">
                            <group>
                                <group string="Warehouse Information">
                                    <field name="lot_stock_id" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Client Action for 2D Map -->
    <record id="action_warehouse_map_2d_client" model="ir.actions.client">
        <field name="name">2D Warehouse Map</field>
        <field name="tag">warehouse_map_2d</field>
        <field name="target">current</field>
    </record>
    
    <!-- Client Action for 3D Map -->
    <record id="action_warehouse_map_3d_client" model="ir.actions.client">
        <field name="name">3D Warehouse View</field>
        <field name="tag">warehouse_map_3d</field>
        <field name="target">current</field>
    </record>
    
</odoo>
