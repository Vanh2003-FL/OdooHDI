<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Stock Location Layout Tree View -->
    <record id="view_stock_location_layout_tree" model="ir.ui.view">
        <field name="name">stock.location.layout.tree</field>
        <field name="model">stock.location.layout</field>
        <field name="arch" type="xml">
            <list string="Location Layouts" decoration-info="location_type=='zone'" 
                  decoration-warning="location_type=='rack'" decoration-success="location_type=='bin'">
                <field name="sequence" widget="handle"/>
                <field name="warehouse_id"/>
                <field name="location_id"/>
                <field name="location_type"/>
                <field name="x"/>
                <field name="y"/>
                <field name="z_level"/>
                <field name="width"/>
                <field name="height"/>
                <field name="stock_quantity"/>
                <field name="lot_count"/>
                <field name="view_type"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>
    
    <!-- Stock Location Layout Form View -->
    <record id="view_stock_location_layout_form" model="ir.ui.view">
        <field name="name">stock.location.layout.form</field>
        <field name="model">stock.location.layout</field>
        <field name="arch" type="xml">
            <form string="Location Layout Configuration">
                <header>
                    <button name="action_open_location_quants" string="View Stock Quants" 
                            type="object" class="btn-primary"/>
                    <button name="action_open_location_lots" string="View Lots/Serials" 
                            type="object" class="btn-secondary"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_location_quants" type="object" 
                                class="oe_stat_button" icon="fa-cubes">
                            <field name="stock_quantity" widget="statinfo" string="Stock Qty"/>
                        </button>
                        <button name="action_open_location_lots" type="object" 
                                class="oe_stat_button" icon="fa-barcode">
                            <field name="lot_count" widget="statinfo" string="Lots/Serials"/>
                        </button>
                    </div>
                    
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" 
                            invisible="active"/>
                    
                    <group>
                        <group name="location_info" string="Location Information">
                            <field name="warehouse_id" required="1"/>
                            <field name="location_id" required="1" 
                                   domain="[('usage', '=', 'internal')]"/>
                            <field name="location_type" required="1"/>
                            <field name="parent_layout_id" 
                                   domain="[('warehouse_id', '=', warehouse_id), ('id', '!=', id)]"/>
                            <field name="sequence"/>
                            <field name="active" invisible="1"/>
                        </group>
                        
                        <group name="visualization" string="Visualization">
                            <field name="view_type"/>
                            <field name="color" widget="color"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="2D Layout" name="layout_2d">
                            <group>
                                <group string="Position">
                                    <field name="x" string="X Position (px)"/>
                                    <field name="y" string="Y Position (px)"/>
                                    <field name="rotation" string="Rotation (Â°)"/>
                                </group>
                                <group string="Dimensions">
                                    <field name="width" string="Width (px)"/>
                                    <field name="height" string="Height (px)"/>
                                </group>
                            </group>
                            <separator string="2D Preview"/>
                            <div class="o_layout_preview" style="border: 1px solid #ccc; padding: 10px; background: #f5f5f5; min-height: 200px;">
                                <div style="background: var(--field-color, #3498db); opacity: 0.7; position: relative; margin: 20px auto;"
                                     t-attf-style="width: #{width}px; height: #{height}px; transform: rotate(#{rotation}deg);">
                                    <span style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); color: white; font-weight: bold;">
                                        <field name="name"/>
                                    </span>
                                </div>
                            </div>
                        </page>
                        
                        <page string="3D Layout" name="layout_3d">
                            <group>
                                <group>
                                    <field name="z_level" string="Z Level (Floor)"/>
                                    <field name="depth" string="Depth (px)"/>
                                </group>
                            </group>
                            <separator string="3D Coordinates"/>
                            <div class="alert alert-info">
                                <strong>3D Position:</strong><br/>
                                X: <field name="x" readonly="1"/> | 
                                Y: <field name="y" readonly="1"/> | 
                                Z: <field name="z_level" readonly="1"/>
                            </div>
                        </page>
                        
                        <page string="Child Locations" name="children" 
                              invisible="location_type == 'bin'">
                            <field name="child_layout_ids" mode="tree">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="location_id" domain="[('usage', '=', 'internal')]"/>
                                    <field name="location_type"/>
                                    <field name="x"/>
                                    <field name="y"/>
                                    <field name="z_level"/>
                                    <field name="width"/>
                                    <field name="height"/>
                                    <field name="stock_quantity"/>
                                    <field name="lot_count"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Layout JSON" name="json_data" groups="base.group_no_one">
                            <field name="layout_json" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_stock_location_layout_search" model="ir.ui.view">
        <field name="name">stock.location.layout.search</field>
        <field name="model">stock.location.layout</field>
        <field name="arch" type="xml">
            <search string="Location Layouts">
                <field name="warehouse_id"/>
                <field name="location_id"/>
                <separator/>
                <filter string="Zones" name="filter_zone" domain="[('location_type', '=', 'zone')]"/>
                <filter string="Racks" name="filter_rack" domain="[('location_type', '=', 'rack')]"/>
                <filter string="Bins" name="filter_bin" domain="[('location_type', '=', 'bin')]"/>
                <separator/>
                <filter string="2D View" name="filter_2d" domain="[('view_type', 'in', ['2d', 'both'])]"/>
                <filter string="3D View" name="filter_3d" domain="[('view_type', 'in', ['3d', 'both'])]"/>
                <separator/>
                <filter string="Has Stock" name="filter_has_stock" domain="[('stock_quantity', '>', 0)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Warehouse" name="group_warehouse" context="{'group_by': 'warehouse_id'}"/>
                    <filter string="Type" name="group_type" context="{'group_by': 'location_type'}"/>
                    <filter string="Parent" name="group_parent" context="{'group_by': 'parent_layout_id'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_stock_location_layout" model="ir.actions.act_window">
        <field name="name">Warehouse Layout Configuration</field>
        <field name="res_model">stock.location.layout</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_filter_bin': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure your warehouse layout for 2D/3D visualization
            </p>
            <p>
                Define coordinates and dimensions for zones, racks, and bins to enable
                visual warehouse management with real-time stock tracking.
            </p>
        </field>
    </record>
    
</odoo>
