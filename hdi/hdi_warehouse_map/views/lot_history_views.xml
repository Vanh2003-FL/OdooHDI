<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Lot History Tree View -->
    <record id="view_lot_history_tree" model="ir.ui.view">
        <field name="name">lot.history.tree</field>
        <field name="model">lot.history</field>
        <field name="arch" type="xml">
            <tree string="Lot Movement History" create="0" edit="0">
                <field name="date"/>
                <field name="lot_id"/>
                <field name="product_id"/>
                <field name="operation_type"/>
                <field name="bin_from_id"/>
                <field name="bin_to_id"/>
                <field name="quantity"/>
                <field name="uom_id"/>
                <field name="reference"/>
                <field name="user_id"/>
            </tree>
        </field>
    </record>
    
    <!-- Lot History Form View -->
    <record id="view_lot_history_form" model="ir.ui.view">
        <field name="name">lot.history.form</field>
        <field name="model">lot.history</field>
        <field name="arch" type="xml">
            <form string="Lot History" create="0" edit="0">
                <sheet>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="lot_id"/>
                            <field name="product_id"/>
                            <field name="operation_type"/>
                        </group>
                        <group>
                            <field name="location_from_id"/>
                            <field name="location_to_id"/>
                            <field name="bin_from_id"/>
                            <field name="bin_to_id"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="quantity"/>
                            <field name="uom_id"/>
                        </group>
                        <group>
                            <field name="reference"/>
                            <field name="move_id"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Lot History Search View -->
    <record id="view_lot_history_search" model="ir.ui.view">
        <field name="name">lot.history.search</field>
        <field name="model">lot.history</field>
        <field name="arch" type="xml">
            <search string="Search Lot History">
                <field name="lot_id"/>
                <field name="product_id"/>
                <field name="bin_from_id"/>
                <field name="bin_to_id"/>
                <field name="reference"/>
                <separator/>
                <filter string="Incoming" name="incoming" domain="[('operation_type', '=', 'in')]"/>
                <filter string="Outgoing" name="outgoing" domain="[('operation_type', '=', 'out')]"/>
                <filter string="Internal" name="internal" domain="[('operation_type', '=', 'internal')]"/>
                <separator/>
                <filter string="Today" name="today" 
                        domain="[('date', '&gt;=', context_today().strftime('%Y-%m-%d 00:00:00')), 
                                 ('date', '&lt;=', context_today().strftime('%Y-%m-%d 23:59:59'))]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Lot" name="group_lot" context="{'group_by': 'lot_id'}"/>
                    <filter string="Product" name="group_product" context="{'group_by': 'product_id'}"/>
                    <filter string="Operation" name="group_operation" context="{'group_by': 'operation_type'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Lot History Action -->
    <record id="action_lot_history" model="ir.actions.act_window">
        <field name="name">Lot Movement History</field>
        <field name="res_model">lot.history</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
