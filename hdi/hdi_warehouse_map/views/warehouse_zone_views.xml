<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Zone List View -->
    <record id="view_warehouse_zone_tree" model="ir.ui.view">
        <field name="name">warehouse.zone.list</field>
        <field name="model">warehouse.zone</field>
        <field name="arch" type="xml">
            <list string="Warehouse Zones">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="warehouse_id"/>
                <field name="location_id"/>
                <field name="aisle_count"/>
                <field name="capacity_utilization" widget="progressbar"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>
    
    <!-- Zone Form View -->
    <record id="view_warehouse_zone_form" model="ir.ui.view">
        <field name="name">warehouse.zone.form</field>
        <field name="model">warehouse.zone</field>
        <field name="arch" type="xml">
            <form string="Warehouse Zone">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="aisle_ids" 
                                type="object"
                                class="oe_stat_button"
                                icon="fa-road">
                            <field name="aisle_count" widget="statinfo" string="Aisles"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" 
                            invisible="active"/>
                    <group>
                        <group>
                            <field name="active" invisible="1"/>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="warehouse_id"/>
                            <field name="location_id"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="temperature_controlled"/>
                            <field name="temperature_min" invisible="not temperature_controlled"/>
                            <field name="temperature_max" invisible="not temperature_controlled"/>
                            <field name="color" widget="color"/>
                        </group>
                    </group>
                    <group>
                        <field name="allowed_category_ids" widget="many2many_tags"/>
                    </group>
                    <notebook>
                        <page string="Capacity" name="capacity">
                            <group>
                                <group>
                                    <field name="total_capacity"/>
                                    <field name="used_capacity"/>
                                </group>
                                <group>
                                    <field name="capacity_utilization" widget="progressbar"/>
                                </group>
                            </group>
                        </page>
                        <page string="Position" name="position">
                            <group>
                                <group>
                                    <field name="position_x"/>
                                    <field name="position_y"/>
                                </group>
                                <group>
                                    <field name="width"/>
                                    <field name="height"/>
                                </group>
                            </group>
                        </page>
                        <page string="Aisles" name="aisles">
                            <field name="aisle_ids">
                                <list>
                                    <field name="sequence" widget="handle"/>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="rack_count"/>
                                    <field name="capacity_utilization" widget="progressbar"/>
                                </list>
                            </field>
                        </page>
                        <page string="Description" name="description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Zone Kanban View -->
    <record id="view_warehouse_zone_kanban" model="ir.ui.view">
        <field name="name">warehouse.zone.kanban</field>
        <field name="model">warehouse.zone</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="color"/>
                <field name="aisle_count"/>
                <field name="capacity_utilization"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click" t-att-style="'border-left: 5px solid ' + record.color.raw_value">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="code"/> - <field name="name"/>
                                    </strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div>
                                    <i class="fa fa-road"/> <field name="aisle_count"/> Aisles
                                </div>
                                <div class="mt-2">
                                    <field name="capacity_utilization" widget="progressbar"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Zone Action -->
    <record id="action_warehouse_zone" model="ir.actions.act_window">
        <field name="name">Warehouse Zones</field>
        <field name="res_model">warehouse.zone</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Warehouse Zone
            </p>
            <p>
                Zones are the top-level organizational unit in your warehouse structure.
            </p>
        </field>
    </record>
</odoo>
