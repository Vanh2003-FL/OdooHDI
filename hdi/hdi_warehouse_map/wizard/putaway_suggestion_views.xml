<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Putaway Suggestion Wizard Form -->
    <record id="view_putaway_suggestion_form" model="ir.ui.view">
        <field name="name">putaway.suggestion.form</field>
        <field name="model">putaway.suggestion</field>
        <field name="arch" type="xml">
            <form string="Putaway Bin Suggestions">
                <group>
                    <field name="picking_id" readonly="1"/>
                </group>
                <group>
                    <field name="line_ids" nolabel="1">
                        <tree editable="bottom">
                            <field name="move_id" readonly="1"/>
                            <field name="product_id" readonly="1"/>
                            <field name="quantity" readonly="1"/>
                            <field name="suggested_bin_id" readonly="1"/>
                            <field name="selected_bin_id" 
                                   options="{'no_create': True}"/>
                            <field name="bin_state" readonly="1"/>
                            <field name="bin_current_product" readonly="1"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="action_apply_suggestions" 
                            string="Apply Suggestions" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancel" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Putaway Suggestion Action -->
    <record id="action_putaway_suggestion" model="ir.actions.act_window">
        <field name="name">Suggest Putaway Bins</field>
        <field name="res_model">putaway.suggestion</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
