<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Bin Block Wizard Form -->
    <record id="view_bin_block_wizard_form" model="ir.ui.view">
        <field name="name">bin.block.wizard.form</field>
        <field name="model">bin.block.wizard</field>
        <field name="arch" type="xml">
            <form string="Block/Unblock">
                <group>
                    <field name="action"/>
                    <field name="bin_id" invisible="lot_id"/>
                    <field name="lot_id" invisible="bin_id"/>
                    <field name="reason"/>
                </group>
                <footer>
                    <button name="action_confirm" 
                            string="Confirm" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancel" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
