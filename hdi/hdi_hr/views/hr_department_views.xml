<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    
    <!-- Department Action -->
    <record id="action_hdi_hr_department" model="ir.actions.act_window">
        <field name="name">Phòng ban</field>
        <field name="res_model">hr.department</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo phòng ban mới
            </p>
        </field>
    </record>

    <!-- Add HDI Block to Department form via inheritance -->
    <record id="hdi_hr_department_form_block" model="ir.ui.view">
        <field name="name">hdi.hr.department.form.block</field>
        <field name="model">hr.department</field>
        <field name="inherit_id" ref="hr.view_department_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/field[@name='manager_id']" position="after">
                <field name="hdi_block_id"/>
            </xpath>
        </field>
    </record>

</odoo>
