<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- HDI Skills Menu -->
        <menuitem id="menu_hdi_skills_main" 
                  name="Kỹ năng &amp; Năng lực" 
                  parent="hr.menu_hr_root"
                  sequence="30"/>

        <!-- HDI Skill Type Views -->
        <record id="view_hdi_skill_type_tree" model="ir.ui.view">
            <field name="name">hdi.skill.type.tree</field>
            <field name="model">hdi.skill.type</field>
            <field name="arch" type="xml">
                <list string="Loại kỹ năng">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="skill_count"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <record id="view_hdi_skill_type_form" model="ir.ui.view">
            <field name="name">hdi.skill.type.form</field>
            <field name="model">hdi.skill.type</field>
            <field name="arch" type="xml">
                <form string="Loại kỹ năng">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="color" widget="color_picker"/>
                                <field name="skill_count"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_hdi_skill_type" model="ir.actions.act_window">
            <field name="name">Loại kỹ năng</field>
            <field name="res_model">hdi.skill.type</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_hdi_skill_type" 
                  name="Loại kỹ năng" 
                  parent="menu_hdi_skills_main" 
                  action="action_hdi_skill_type" 
                  sequence="10"/>

        <!-- HDI Skill Views -->
        <record id="view_hdi_skill_tree" model="ir.ui.view">
            <field name="name">hdi.skill.tree</field>
            <field name="model">hdi.skill</field>
            <field name="arch" type="xml">
                <list string="Kỹ năng">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="skill_type_id"/>
                    <field name="category"/>
                    <field name="required_level"/>
                    <field name="is_core_skill"/>
                    <field name="employee_count"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <record id="view_hdi_skill_form" model="ir.ui.view">
            <field name="name">hdi.skill.form</field>
            <field name="model">hdi.skill</field>
            <field name="arch" type="xml">
                <form string="Kỹ năng">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="skill_type_id"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="category"/>
                                <field name="required_level"/>
                                <field name="is_core_skill"/>
                                <field name="is_leadership_skill"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                        <notebook>
                            <page string="Vị trí công việc">
                                <field name="job_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="department_id"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Nhân viên có kỹ năng">
                                <field name="employee_skill_ids">
                                    <list>
                                        <field name="employee_id"/>
                                        <field name="hdi_proficiency_level"/>
                                        <field name="hdi_certification"/>
                                        <field name="hdi_last_assessed_date"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_hdi_skill_search" model="ir.ui.view">
            <field name="name">hdi.skill.search</field>
            <field name="model">hdi.skill</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm kỹ năng">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="skill_type_id"/>
                    <filter string="Kỹ năng cốt lõi" name="core_skills" domain="[('is_core_skill', '=', True)]"/>
                    <filter string="Kỹ năng lãnh đạo" name="leadership_skills" domain="[('is_leadership_skill', '=', True)]"/>
                    <filter string="Kỹ năng kỹ thuật" name="technical" domain="[('category', '=', 'technical')]"/>
                    <filter string="Kỹ năng mềm" name="soft" domain="[('category', '=', 'soft')]"/>
                    <filter string="Kỹ năng quản lý" name="management" domain="[('category', '=', 'management')]"/>
                    <separator/>
                    <filter string="Kích hoạt" name="active" domain="[('active', '=', True)]"/>
                    <group expand="0" string="Nhóm theo">
                        <filter string="Loại kỹ năng" name="group_skill_type" context="{'group_by': 'skill_type_id'}"/>
                        <filter string="Phân loại" name="group_category" context="{'group_by': 'category'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_hdi_skill" model="ir.actions.act_window">
            <field name="name">Kỹ năng</field>
            <field name="res_model">hdi.skill</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_hdi_skill_search"/>
        </record>

        <menuitem id="menu_hdi_skill" 
                  name="Danh mục kỹ năng" 
                  parent="menu_hdi_skills_main" 
                  action="action_hdi_skill" 
                  sequence="20"/>

        <!-- HDI Competency Type Views -->
        <record id="view_hdi_competency_type_tree" model="ir.ui.view">
            <field name="name">hdi.competency.type.tree</field>
            <field name="model">hdi.competency.type</field>
            <field name="arch" type="xml">
                <list string="Loại năng lực">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="competency_count"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <record id="view_hdi_competency_type_form" model="ir.ui.view">
            <field name="name">hdi.competency.type.form</field>
            <field name="model">hdi.competency.type</field>
            <field name="arch" type="xml">
                <form string="Loại năng lực">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="color" widget="color_picker"/>
                                <field name="competency_count"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_hdi_competency_type" model="ir.actions.act_window">
            <field name="name">Loại năng lực</field>
            <field name="res_model">hdi.competency.type</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_hdi_competency_type" 
                  name="Loại năng lực" 
                  parent="menu_hdi_skills_main" 
                  action="action_hdi_competency_type" 
                  sequence="30"/>

        <!-- HDI Competency Views -->
        <record id="view_hdi_competency_tree" model="ir.ui.view">
            <field name="name">hdi.competency.tree</field>
            <field name="model">hdi.competency</field>
            <field name="arch" type="xml">
                <list string="Năng lực">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="competency_type_id"/>
                    <field name="weight"/>
                    <field name="is_core_competency"/>
                    <field name="is_leadership_competency"/>
                    <field name="employee_count"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <record id="view_hdi_competency_form" model="ir.ui.view">
            <field name="name">hdi.competency.form</field>
            <field name="model">hdi.competency</field>
            <field name="arch" type="xml">
                <form string="Năng lực">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="competency_type_id"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="parent_id"/>
                                <field name="weight"/>
                                <field name="is_core_competency"/>
                                <field name="is_leadership_competency"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                        <group string="Chỉ số hành vi">
                            <field name="behavioral_indicators"/>
                        </group>
                        <notebook>
                            <page string="Mô tả các mức">
                                <group>
                                    <group string="Mức 1-3">
                                        <field name="level_1_desc" string="Mức 1"/>
                                        <field name="level_2_desc" string="Mức 2"/>
                                        <field name="level_3_desc" string="Mức 3"/>
                                    </group>
                                    <group string="Mức 4-5">
                                        <field name="level_4_desc" string="Mức 4"/>
                                        <field name="level_5_desc" string="Mức 5"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Vị trí công việc">
                                <field name="job_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="department_id"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Nhân viên đánh giá">
                                <field name="employee_competency_ids">
                                    <list>
                                        <field name="employee_id"/>
                                        <field name="level"/>
                                        <field name="current_score"/>
                                        <field name="target_score"/>
                                        <field name="assessment_date"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Năng lực con">
                                <field name="child_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="weight"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_hdi_competency_search" model="ir.ui.view">
            <field name="name">hdi.competency.search</field>
            <field name="model">hdi.competency</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm năng lực">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="competency_type_id"/>
                    <filter string="Năng lực cốt lõi" name="core_competencies" domain="[('is_core_competency', '=', True)]"/>
                    <filter string="Năng lực lãnh đạo" name="leadership_competencies" domain="[('is_leadership_competency', '=', True)]"/>
                    <separator/>
                    <filter string="Kích hoạt" name="active" domain="[('active', '=', True)]"/>
                    <group expand="0" string="Nhóm theo">
                        <filter string="Loại năng lực" name="group_competency_type" context="{'group_by': 'competency_type_id'}"/>
                        <filter string="Năng lực cha" name="group_parent" context="{'group_by': 'parent_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_hdi_competency" model="ir.actions.act_window">
            <field name="name">Năng lực</field>
            <field name="res_model">hdi.competency</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_hdi_competency_search"/>
        </record>

        <menuitem id="menu_hdi_competency" 
                  name="Danh mục năng lực" 
                  parent="menu_hdi_skills_main" 
                  action="action_hdi_competency" 
                  sequence="40"/>

    </data>
</odoo>