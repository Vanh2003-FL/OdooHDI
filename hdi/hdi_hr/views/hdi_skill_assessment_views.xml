<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- HDI Skill Assessment Views -->
        <record id="view_hdi_skill_assessment_tree" model="ir.ui.view">
            <field name="name">hdi.skill.assessment.tree</field>
            <field name="model">hdi.skill.assessment</field>
            <field name="arch" type="xml">
                <list string="Đánh giá kỹ năng &amp; năng lực">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="assessor_id"/>
                    <field name="assessment_date"/>
                    <field name="assessment_type"/>
                    <field name="overall_score" widget="progressbar"/>
                    <field name="state" decoration-info="state == 'draft'" decoration-warning="state == 'submitted'" decoration-success="state == 'approved'"/>
                </list>
            </field>
        </record>

        <record id="view_hdi_skill_assessment_form" model="ir.ui.view">
            <field name="name">hdi.skill.assessment.form</field>
            <field name="model">hdi.skill.assessment</field>
            <field name="arch" type="xml">
                <form string="Đánh giá kỹ năng &amp; năng lực">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,reviewed,approved"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="employee_id"/>
                                <field name="assessor_id"/>
                            </group>
                            <group>
                                <field name="assessment_date"/>
                                <field name="assessment_type"/>
                                <field name="overall_score" widget="progressbar"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Đánh giá kỹ năng">
                                <field name="skill_line_ids">
                                    <list editable="bottom">
                                        <field name="skill_id"/>
                                        <field name="current_level"/>
                                        <field name="target_level"/>
                                        <field name="score" widget="float" digits="[16,1]"/>
                                        <field name="evidence"/>
                                        <field name="development_action"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Đánh giá năng lực">
                                <field name="competency_line_ids">
                                    <list editable="bottom">
                                        <field name="competency_id"/>
                                        <field name="current_level"/>
                                        <field name="target_level"/>
                                        <field name="score" widget="float" digits="[16,1]"/>
                                        <field name="evidence"/>
                                        <field name="development_action"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Tổng kết">
                                <group>
                                    <group>
                                        <field name="total_skill_score" widget="progressbar"/>
                                        <field name="total_competency_score" widget="progressbar"/>
                                    </group>
                                </group>
                                <group string="Điểm mạnh">
                                    <field name="strengths" nolabel="1"/>
                                </group>
                                <group string="Điểm cần cải thiện">
                                    <field name="areas_for_improvement" nolabel="1"/>
                                </group>
                                <group string="Kế hoạch phát triển">
                                    <field name="development_plan" nolabel="1"/>
                                </group>
                                <group string="Nhận xét của người đánh giá">
                                    <field name="assessor_comments" nolabel="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_hdi_skill_assessment_search" model="ir.ui.view">
            <field name="name">hdi.skill.assessment.search</field>
            <field name="model">hdi.skill.assessment</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm đánh giá">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="assessor_id"/>
                    <filter string="Nháp" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Đã gửi" name="submitted" domain="[('state', '=', 'submitted')]"/>
                    <filter string="Đã duyệt" name="reviewed" domain="[('state', '=', 'reviewed')]"/>
                    <filter string="Đã phê duyệt" name="approved" domain="[('state', '=', 'approved')]"/>
                    <separator/>
                    <filter string="Tự đánh giá" name="self_assessment" domain="[('assessment_type', '=', 'self')]"/>
                    <filter string="Đánh giá cấp trên" name="supervisor_assessment" domain="[('assessment_type', '=', 'supervisor')]"/>
                    <filter string="Đánh giá thường niên" name="annual_assessment" domain="[('assessment_type', '=', 'annual')]"/>
                    <separator/>
                    <filter string="Tháng này" name="this_month" domain="[('assessment_date', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')), ('assessment_date', '&lt;', (context_today() + relativedelta(months=1, day=1)).strftime('%Y-%m-%d'))]"/>
                    <filter string="Năm này" name="this_year" domain="[('assessment_date', '&gt;=', (context_today() - relativedelta(month=1, day=1)).strftime('%Y-%m-%d')), ('assessment_date', '&lt;=', (context_today() - relativedelta(month=12, day=31)).strftime('%Y-%m-%d'))]"/>
                    <group expand="0" string="Nhóm theo">
                        <filter string="Nhân viên" name="group_employee" context="{'group_by': 'employee_id'}"/>
                        <filter string="Người đánh giá" name="group_assessor" context="{'group_by': 'assessor_id'}"/>
                        <filter string="Loại đánh giá" name="group_type" context="{'group_by': 'assessment_type'}"/>
                        <filter string="Trạng thái" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Tháng đánh giá" name="group_month" context="{'group_by': 'assessment_date:month'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_hdi_skill_assessment_calendar" model="ir.ui.view">
            <field name="name">hdi.skill.assessment.calendar</field>
            <field name="model">hdi.skill.assessment</field>
            <field name="arch" type="xml">
                <calendar string="Lịch đánh giá" date_start="assessment_date" color="assessment_type">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="state"/>
                </calendar>
            </field>
        </record>

        <record id="view_hdi_skill_assessment_kanban" model="ir.ui.view">
            <field name="name">hdi.skill.assessment.kanban</field>
            <field name="model">hdi.skill.assessment</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="assessor_id"/>
                    <field name="assessment_date"/>
                    <field name="overall_score"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card">
                                <div class="oe_kanban_content">
                                    <div><strong><field name="name"/></strong></div>
                                    <div>Nhân viên: <field name="employee_id"/></div>
                                    <div>Người đánh giá: <field name="assessor_id"/></div>
                                    <div>Ngày: <field name="assessment_date"/></div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="overall_score" widget="progressbar"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="action_hdi_skill_assessment" model="ir.actions.act_window">
            <field name="name">Đánh giá kỹ năng &amp; năng lực</field>
            <field name="res_model">hdi.skill.assessment</field>
            <field name="view_mode">kanban,list,form,calendar</field>
            <field name="search_view_id" ref="view_hdi_skill_assessment_search"/>
        </record>

        <menuitem id="menu_hdi_skill_assessment" 
                  name="Đánh giá kỹ năng &amp; năng lực" 
                  parent="menu_hdi_skills_main" 
                  action="action_hdi_skill_assessment" 
                  sequence="50"/>

        <!-- HDI Skill Assessment Line Views -->
        <record id="view_hdi_skill_assessment_line_tree" model="ir.ui.view">
            <field name="name">hdi.skill.assessment.line.tree</field>
            <field name="model">hdi.skill.assessment.line</field>
            <field name="arch" type="xml">
                <list string="Chi tiết đánh giá kỹ năng">
                    <field name="assessment_id"/>
                    <field name="skill_id"/>
                    <field name="current_level"/>
                    <field name="target_level"/>
                    <field name="score" widget="progressbar"/>
                    <field name="development_action"/>
                </list>
            </field>
        </record>

        <!-- HDI Competency Assessment Line Views -->
        <record id="view_hdi_competency_assessment_line_tree" model="ir.ui.view">
            <field name="name">hdi.competency.assessment.line.tree</field>
            <field name="model">hdi.competency.assessment.line</field>
            <field name="arch" type="xml">
                <list string="Chi tiết đánh giá năng lực">
                    <field name="assessment_id"/>
                    <field name="competency_id"/>
                    <field name="current_level"/>
                    <field name="target_level"/>
                    <field name="score" widget="progressbar"/>
                    <field name="development_action"/>
                </list>
            </field>
        </record>

    </data>
</odoo>