<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    
    <!-- Employee Skill Tree View -->
    <record id="view_hdi_employee_skill_tree" model="ir.ui.view">
        <field name="name">hdi.employee.skill.tree</field>
        <field name="model">hdi.employee.skill</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="skill_id"/>
                <field name="skill_type_id"/>
                <field name="hdi_proficiency_level"/>
                <field name="hdi_certification"/>
                <field name="hdi_years_of_experience"/>
                <field name="hdi_last_assessed_date"/>
            </list>
        </field>
    </record>
    
</odoo>
