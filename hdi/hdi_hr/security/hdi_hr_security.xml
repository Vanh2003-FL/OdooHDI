<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Security Groups -->
    <record id="group_hdi_hr_user" model="res.groups">
        <field name="name">HDI HR User</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_hdi_hr_manager" model="res.groups">
        <field name="name">HDI HR Manager</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="implied_ids" eval="[(4, ref('group_hdi_hr_user'))]"/>
    </record>

    <!-- Record Rules -->
    <record id="hr_evaluation_user_rule" model="ir.rule">
        <field name="name">HDI HR Evaluation: User</field>
        <field name="model_id" ref="model_hr_evaluation"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_hdi_hr_user'))]"/>
    </record>

    <record id="hr_evaluation_manager_rule" model="ir.rule">
        <field name="name">HDI HR Evaluation: Manager</field>
        <field name="model_id" ref="model_hr_evaluation"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_hdi_hr_manager'))]"/>
    </record>
</odoo>
