<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequence for Employee Code -->
        <record id="seq_hdi_employee_code" model="ir.sequence">
            <field name="name">HDI Employee Code</field>
            <field name="code">hdi.hr.employee</field>
            <field name="prefix">HDI</field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

        <!-- Sequence for Evaluation -->
        <record id="seq_hdi_evaluation" model="ir.sequence">
            <field name="name">HDI Evaluation</field>
            <field name="code">hdi.hr.evaluation</field>
            <field name="prefix">EVAL-</field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
    </data>
</odoo>
