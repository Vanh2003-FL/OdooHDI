<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    <!-- Picking Route Widget Template - OWL -->
    <!-- To be implemented in PHASE 4-5 -->
    
    <t t-name="hdi_warehouse_3d.PickingRouteWidget">
        <div class="picking-route-container">
            <div class="route-map" t-ref="map"/>
            <div class="route-details">
                <div class="route-info">
                    <span class="route-distance" t-text="route.distance"/>
                    <span class="route-time" t-text="route.estimated_time"/>
                </div>
                <div class="route-sequence">
                    <ul>
                        <li t-foreach="route.bins" t-as="bin" t-key="bin.id">
                            <span t-text="bin_index + 1"/>. <t t-esc="bin.name"/>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </t>
</templates>
