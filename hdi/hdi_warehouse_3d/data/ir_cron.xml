<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Cron Job: Generate Daily Heatmap for all layouts -->
        <record id="ir_cron_generate_daily_heatmap" model="ir.cron">
            <field name="name">Warehouse 3D: Generate Daily Heatmap</field>
            <field name="model_id" ref="model_warehouse_heatmap"/>
            <field name="state">code</field>
            <field name="code">model._cron_generate_daily_heatmap()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="priority">5</field>
        </record>
        
        <!-- Cron Job: Generate Daily Metrics for all layouts -->
        <record id="ir_cron_generate_daily_metrics" model="ir.cron">
            <field name="name">Warehouse 3D: Generate Daily Metrics</field>
            <field name="model_id" ref="model_warehouse_metrics"/>
            <field name="state">code</field>
            <field name="code">model._cron_generate_daily_metrics()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="priority">5</field>
        </record>
        
        <!-- Cron Job: Clean Old Heatmap Data (keep last 90 days) -->
        <record id="ir_cron_cleanup_old_heatmap" model="ir.cron">
            <field name="name">Warehouse 3D: Cleanup Old Heatmap Data</field>
            <field name="model_id" ref="model_warehouse_heatmap"/>
            <field name="state">code</field>
            <field name="code">model._cron_cleanup_old_data(days=90)</field>
            <field name="interval_number">7</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="priority">10</field>
        </record>
        
        <!-- Cron Job: Clean Old Metrics Data (keep last 90 days) -->
        <record id="ir_cron_cleanup_old_metrics" model="ir.cron">
            <field name="name">Warehouse 3D: Cleanup Old Metrics Data</field>
            <field name="model_id" ref="model_warehouse_metrics"/>
            <field name="state">code</field>
            <field name="code">model._cron_cleanup_old_data(days=90)</field>
            <field name="interval_number">7</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="priority">10</field>
        </record>
        
    </data>
</odoo>
