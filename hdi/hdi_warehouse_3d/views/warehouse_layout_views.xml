<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- ========== WAREHOUSE LAYOUT VIEWS ========== -->
    
    <!-- Layout Tree View -->
    <record id="view_warehouse_layout_tree" model="ir.ui.view">
        <field name="name">warehouse.layout.tree</field>
        <field name="model">warehouse.layout</field>
        <field name="arch" type="xml">
            <list string="Warehouse Layouts">
                <field name="name"/>
                <field name="warehouse_id"/>
                <field name="layout_type"/>
                <field name="length"/>
                <field name="width"/>
                <field name="height"/>
                <field name="updated_date"/>
            </list>
        </field>
    </record>
    
    <!-- Layout Form View -->
    <record id="view_warehouse_layout_form" model="ir.ui.view">
        <field name="name">warehouse.layout.form</field>
        <field name="model">warehouse.layout</field>
        <field name="arch" type="xml">
            <form string="Warehouse Layout">
                <header>
                    <button name="get_layout_info" string="View 3D Layout" type="object" class="oe_highlight" icon="fa-cube"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Layout Name..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="warehouse_id"/>
                            <field name="layout_type" widget="radio"/>
                            <field name="background_color" widget="color"/>
                        </group>
                        <group>
                            <field name="created_date" readonly="1"/>
                            <field name="updated_date" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Dimensions" name="dimensions">
                            <group>
                                <group string="Physical Dimensions (meters)">
                                    <field name="length"/>
                                    <field name="width"/>
                                    <field name="height"/>
                                </group>
                                <group string="3D Model">
                                    <field name="model_file"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Camera Settings" name="camera">
                            <group>
                                <group string="Camera Position">
                                    <field name="camera_x"/>
                                    <field name="camera_y"/>
                                    <field name="camera_z"/>
                                </group>
                                <group string="Camera Target">
                                    <field name="camera_target_x"/>
                                    <field name="camera_target_y"/>
                                    <field name="camera_target_z"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Zones" name="zones">
                            <field name="zone_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="zone_type"/>
                                    <field name="pos_x"/>
                                    <field name="pos_y"/>
                                    <field name="pos_z"/>
                                    <field name="zone_color" widget="color"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Aisles" name="aisles">
                            <field name="aisle_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="zone_id"/>
                                    <field name="direction"/>
                                    <field name="pos_x"/>
                                    <field name="pos_y"/>
                                    <field name="length"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="3D Viewer" name="viewer_3d">
                            <field name="id" widget="warehouse_layout_viewer" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Layout Kanban View -->
    <record id="view_warehouse_layout_kanban" model="ir.ui.view">
        <field name="name">warehouse.layout.kanban</field>
        <field name="model">warehouse.layout</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="warehouse_id"/>
                <field name="layout_type"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <i class="fa fa-cube fa-3x" style="color: #875A7B;" title="Warehouse Layout"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <field name="warehouse_id"/>
                                </div>
                                <div>
                                    <span class="badge badge-pill">
                                        <field name="layout_type"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Layout Search View -->
    <record id="view_warehouse_layout_search" model="ir.ui.view">
        <field name="name">warehouse.layout.search</field>
        <field name="model">warehouse.layout</field>
        <field name="arch" type="xml">
            <search string="Search Layouts">
                <field name="name"/>
                <field name="warehouse_id"/>
                <filter string="3D Layouts" name="filter_3d" domain="[('layout_type', '=', '3d')]"/>
                <filter string="2D Layouts" name="filter_2d" domain="[('layout_type', '=', '2d')]"/>
                <group expand="0" string="Group By">
                    <filter string="Warehouse" name="group_warehouse" context="{'group_by': 'warehouse_id'}"/>
                    <filter string="Type" name="group_type" context="{'group_by': 'layout_type'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Layout Action -->
    <record id="action_warehouse_layout" model="ir.actions.act_window">
        <field name="name">Warehouse Layouts</field>
        <field name="res_model">warehouse.layout</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="view_warehouse_layout_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first warehouse layout
            </p>
            <p>
                Define the 3D/2D structure of your warehouse with zones, aisles, racks, and bins.
            </p>
        </field>
    </record>
    
    
    <!-- ========== WAREHOUSE ZONE VIEWS ========== -->
    
    <!-- Zone Tree View -->
    <record id="view_warehouse_zone_tree" model="ir.ui.view">
        <field name="name">warehouse.zone.tree</field>
        <field name="model">warehouse.zone</field>
        <field name="arch" type="xml">
            <list string="Zones">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="layout_id"/>
                <field name="zone_type"/>
                <field name="length"/>
                <field name="width"/>
                <field name="zone_color" widget="color"/>
            </list>
        </field>
    </record>
    
    <!-- Zone Form View -->
    <record id="view_warehouse_zone_form" model="ir.ui.view">
        <field name="name">warehouse.zone.form</field>
        <field name="model">warehouse.zone</field>
        <field name="arch" type="xml">
            <form string="Zone">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="layout_id"/>
                            <field name="zone_type"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="zone_color" widget="color"/>
                        </group>
                    </group>
                    <group string="Position &amp; Dimensions">
                        <group>
                            <label for="pos_x" string="Position"/>
                            <div class="o_row">
                                <field name="pos_x"/> m (X),
                                <field name="pos_y"/> m (Y),
                                <field name="pos_z"/> m (Z)
                            </div>
                        </group>
                        <group>
                            <label for="length" string="Dimensions"/>
                            <div class="o_row">
                                <field name="length"/> m (L) ×
                                <field name="width"/> m (W) ×
                                <field name="height"/> m (H)
                            </div>
                        </group>
                    </group>
                    <group string="Stock Locations">
                        <field name="location_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="aisle_ids">
                            <list>
                                <field name="name"/>
                                <field name="direction"/>
                                <field name="length"/>
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Zone Action -->
    <record id="action_warehouse_zone" model="ir.actions.act_window">
        <field name="name">Zones</field>
        <field name="res_model">warehouse.zone</field>
        <field name="view_mode">list,form</field>
    </record>
    
    
    <!-- ========== WAREHOUSE AISLE VIEWS ========== -->
    
    <!-- Aisle Tree View -->
    <record id="view_warehouse_aisle_tree" model="ir.ui.view">
        <field name="name">warehouse.aisle.tree</field>
        <field name="model">warehouse.aisle</field>
        <field name="arch" type="xml">
            <list string="Aisles">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="layout_id"/>
                <field name="zone_id"/>
                <field name="direction"/>
                <field name="length"/>
            </list>
        </field>
    </record>
    
    <!-- Aisle Form View -->
    <record id="view_warehouse_aisle_form" model="ir.ui.view">
        <field name="name">warehouse.aisle.form</field>
        <field name="model">warehouse.aisle</field>
        <field name="arch" type="xml">
            <form string="Aisle">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="layout_id"/>
                            <field name="zone_id"/>
                            <field name="direction"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <label for="pos_x" string="Position"/>
                            <div class="o_row">
                                <field name="pos_x"/> m (X),
                                <field name="pos_y"/> m (Y),
                                <field name="pos_z"/> m (Z)
                            </div>
                            <label for="length" string="Dimensions"/>
                            <div class="o_row">
                                <field name="length"/> m (L) ×
                                <field name="width"/> m (W) ×
                                <field name="height"/> m (H)
                            </div>
                        </group>
                    </group>
                    <group string="Racks in Aisle">
                        <field name="rack_ids" nolabel="1">
                            <list>
                                <field name="name"/>
                                <field name="shelf_count"/>
                                <field name="bin_per_shelf"/>
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Aisle Action -->
    <record id="action_warehouse_aisle" model="ir.actions.act_window">
        <field name="name">Aisles</field>
        <field name="res_model">warehouse.aisle</field>
        <field name="view_mode">list,form</field>
    </record>
    
    
    <!-- ========== WAREHOUSE RACK VIEWS ========== -->
    
    <!-- Rack Tree View -->
    <record id="view_warehouse_rack_tree" model="ir.ui.view">
        <field name="name">warehouse.rack.tree</field>
        <field name="model">warehouse.rack</field>
        <field name="arch" type="xml">
            <list string="Racks">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="aisle_id"/>
                <field name="shelf_count"/>
                <field name="bin_per_shelf"/>
                <field name="max_weight_per_shelf"/>
            </list>
        </field>
    </record>
    
    <!-- Rack Form View -->
    <record id="view_warehouse_rack_form" model="ir.ui.view">
        <field name="name">warehouse.rack.form</field>
        <field name="model">warehouse.rack</field>
        <field name="arch" type="xml">
            <form string="Rack">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="aisle_id"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="shelf_count"/>
                            <field name="bin_per_shelf"/>
                            <field name="max_weight_per_shelf"/>
                        </group>
                    </group>
                    <group string="Position &amp; Dimensions">
                        <group>
                            <label for="pos_x" string="Position"/>
                            <div class="o_row">
                                <field name="pos_x"/> m (X),
                                <field name="pos_y"/> m (Y),
                                <field name="pos_z"/> m (Z)
                            </div>
                        </group>
                        <group>
                            <label for="width" string="Dimensions"/>
                            <div class="o_row">
                                <field name="width"/> m (W) ×
                                <field name="depth"/> m (D) ×
                                <field name="height"/> m (H)
                            </div>
                        </group>
                    </group>
                    <group string="Shelves">
                        <field name="shelf_ids" nolabel="1">
                            <list>
                                <field name="shelf_level"/>
                                <field name="pos_z"/>
                                <field name="max_weight"/>
                                <field name="occupied_weight"/>
                                <field name="utilization_percentage" widget="progressbar"/>
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Rack Action -->
    <record id="action_warehouse_rack" model="ir.actions.act_window">
        <field name="name">Racks</field>
        <field name="res_model">warehouse.rack</field>
        <field name="view_mode">list,form</field>
    </record>
    
    
    <!-- ========== WAREHOUSE SHELF VIEWS ========== -->
    
    <!-- Shelf Tree View -->
    <record id="view_warehouse_shelf_tree" model="ir.ui.view">
        <field name="name">warehouse.shelf.tree</field>
        <field name="model">warehouse.shelf</field>
        <field name="arch" type="xml">
            <list string="Shelves">
                <field name="rack_id"/>
                <field name="shelf_level"/>
                <field name="pos_z"/>
                <field name="max_weight"/>
                <field name="occupied_weight"/>
                <field name="utilization_percentage" widget="progressbar"/>
            </list>
        </field>
    </record>
    
</odoo>
