<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Cross-Dock Views -->
    <record id="view_warehouse_crossdock_form" model="ir.ui.view">
        <field name="name">warehouse.crossdock.form</field>
        <field name="model">warehouse.crossdock</field>
        <field name="arch" type="xml">
            <form string="Hoạt động giao hàng nhanh">
                <header>
                    <button name="action_confirm" string="Xác nhận" type="object" 
                            invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_start_receiving" string="Bắt đầu nhận hàng" type="object"
                            invisible="state != 'confirmed'" class="oe_highlight"/>
                    <button name="action_receive" string="Đánh dấu đã nhận" type="object"
                            invisible="state not in ['confirmed', 'receiving']" class="oe_highlight"/>
                    <button name="action_start_shipping" string="Bắt đầu giao hàng" type="object"
                            invisible="state != 'staged'" class="oe_highlight"/>
                    <button name="action_ship" string="Đánh dấu đã giao" type="object"
                            invisible="state not in ['staged', 'shipping']" class="oe_highlight"/>
                    <button name="action_cancel" string="Hủy" type="object"
                            invisible="state in ['done', 'cancelled']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,receiving,staged,shipping,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_source_picking" icon="fa-truck"
                                invisible="not source_picking_id">
                            <field string="Hàng vào" name="source_picking_id" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_dest_picking" icon="fa-truck"
                                invisible="not dest_picking_id">
                            <field string="Hàng ra" name="dest_picking_id" widget="statinfo"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="warehouse_id" options="{'no_create': True}"/>
                            <field name="layout_id" readonly="1"/>
                            <field name="product_id" options="{'no_create': True}"/>
                            <field name="product_uom_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="priority" widget="priority"/>
                            <field name="scheduled_date"/>
                            <field name="max_staging_hours"/>
                            <field name="staging_deadline" readonly="1" 
                                   decoration-danger="is_overdue == True"/>
                            <field name="is_overdue" invisible="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Số lượng" name="quantities">
                            <group>
                                <group>
                                    <field name="planned_qty"/>
                                    <field name="received_qty" readonly="1"/>
                                    <field name="shipped_qty" readonly="1"/>
                                    <field name="remaining_qty" readonly="1"/>
                                </group>
                                <group>
                                    <field name="received_date" readonly="1"/>
                                    <field name="shipped_date" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Dàn xếp" name="staging">
                            <group>
                                <field name="staging_location_id" options="{'no_create': True}"/>
                                <field name="staging_bin_id" options="{'no_create': True}"
                                       domain="[('location_id', '=', staging_location_id)]"/>
                            </group>
                        </page>
                        
                        <page string="Chuyển kho" name="transfers">
                            <group>
                                <field name="source_picking_id" options="{'no_create': True}"/>
                                <field name="dest_picking_id" options="{'no_create': True}"/>
                            </group>
                        </page>
                        
                        <page string="Ghi chú" name="notes">
                            <field name="note" placeholder="Ghi chú bổ sung..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_warehouse_crossdock_tree" model="ir.ui.view">
        <field name="name">warehouse.crossdock.tree</field>
        <field name="model">warehouse.crossdock</field>
        <field name="arch" type="xml">
            <list string="Cross-Dock Operations" decoration-danger="is_overdue == True"
                  decoration-success="state == 'done'" decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="warehouse_id"/>
                <field name="product_id"/>
                <field name="planned_qty"/>
                <field name="received_qty"/>
                <field name="shipped_qty"/>
                <field name="remaining_qty"/>
                <field name="priority" widget="priority"/>
                <field name="scheduled_date"/>
                <field name="staging_deadline"/>
                <field name="is_overdue" invisible="1"/>
                <field name="state" widget="badge" 
                       decoration-info="state == 'draft'"
                       decoration-warning="state in ['confirmed', 'receiving', 'staged', 'shipping']"
                       decoration-success="state == 'done'"/>
            </list>
        </field>
    </record>

    <record id="view_warehouse_crossdock_kanban" model="ir.ui.view">
        <field name="name">warehouse.crossdock.kanban</field>
        <field name="model">warehouse.crossdock</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="product_id"/>
                <field name="planned_qty"/>
                <field name="received_qty"/>
                <field name="is_overdue"/>
                <field name="priority"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click #{record.is_overdue.raw_value ? 'oe_kanban_color_2' : ''}">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                        <br/>
                                        <span><field name="product_id"/></span>
                                    </div>
                                    <field name="priority" widget="priority"/>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="planned_qty"/> planned / <field name="received_qty"/> received
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="scheduled_date" widget="date"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_warehouse_crossdock_search" model="ir.ui.view">
        <field name="name">warehouse.crossdock.search</field>
        <field name="model">warehouse.crossdock</field>
        <field name="arch" type="xml">
            <search string="Cross-Dock Operations">
                <field name="name"/>
                <field name="product_id"/>
                <field name="warehouse_id"/>
                <separator/>
                <filter string="Overdue" name="overdue" domain="[('is_overdue', '=', True)]"/>
                <filter string="Active" name="active" domain="[('state', 'not in', ['done', 'cancelled'])]"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="In Progress" name="in_progress" 
                        domain="[('state', 'in', ['confirmed', 'receiving', 'staged', 'shipping'])]"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                <group expand="0" string="Group By">
                    <filter string="Warehouse" name="group_warehouse" context="{'group_by': 'warehouse_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Priority" name="group_priority" context="{'group_by': 'priority'}"/>
                    <filter string="Scheduled Date" name="group_scheduled" context="{'group_by': 'scheduled_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_warehouse_crossdock" model="ir.actions.act_window">
        <field name="name">Cross-Dock Operations</field>
        <field name="res_model">warehouse.crossdock</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Cross-Dock Operation
            </p>
            <p>
                Cross-dock operations enable direct transfer from receiving to shipping
                without intermediate storage, reducing handling time.
            </p>
        </field>
    </record>

    <!-- Bin Movement Views -->
    <record id="view_warehouse_bin_movement_form" model="ir.ui.view">
        <field name="name">warehouse.bin.movement.form</field>
        <field name="model">warehouse.bin.movement</field>
        <field name="arch" type="xml">
            <form string="Bin Movement" create="false" edit="false">
                <sheet>
                    <group>
                        <group>
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="product_uom_id"/>
                            <field name="movement_type"/>
                        </group>
                        <group>
                            <field name="movement_date"/>
                            <field name="user_id"/>
                            <field name="warehouse_id"/>
                            <field name="distance"/>
                        </group>
                    </group>
                    <group>
                        <group string="Source">
                            <field name="source_bin_id"/>
                            <field name="source_location_id"/>
                        </group>
                        <group string="Destination">
                            <field name="dest_bin_id"/>
                            <field name="dest_location_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="picking_id"/>
                        <field name="move_line_id"/>
                    </group>
                    <group>
                        <field name="note" placeholder="Additional notes..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_warehouse_bin_movement_tree" model="ir.ui.view">
        <field name="name">warehouse.bin.movement.tree</field>
        <field name="model">warehouse.bin.movement</field>
        <field name="arch" type="xml">
            <list string="Bin Movements" create="false" edit="false">
                <field name="movement_date"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="movement_type"/>
                <field name="source_bin_id"/>
                <field name="dest_bin_id"/>
                <field name="distance"/>
                <field name="user_id"/>
                <field name="picking_id"/>
            </list>
        </field>
    </record>

    <record id="view_warehouse_bin_movement_search" model="ir.ui.view">
        <field name="name">warehouse.bin.movement.search</field>
        <field name="model">warehouse.bin.movement</field>
        <field name="arch" type="xml">
            <search string="Bin Movements">
                <field name="product_id"/>
                <field name="source_bin_id"/>
                <field name="dest_bin_id"/>
                <field name="user_id"/>
                <separator/>
                <filter string="Today" name="today" domain="[('movement_date', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0)))]"/>
                <filter string="This Week" name="week" domain="[('movement_date', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter string="This Month" name="month" domain="[('movement_date', '&gt;=', (context_today().replace(day=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Movement Type" name="group_type" context="{'group_by': 'movement_type'}"/>
                    <filter string="Product" name="group_product" context="{'group_by': 'product_id'}"/>
                    <filter string="User" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Warehouse" name="group_warehouse" context="{'group_by': 'warehouse_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'movement_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_warehouse_bin_movement" model="ir.actions.act_window">
        <field name="name">Bin Movements</field>
        <field name="res_model">warehouse.bin.movement</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_week': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No bin movements recorded yet
            </p>
            <p>
                Bin movements are automatically tracked when products are moved between bins.
            </p>
        </field>
    </record>

    <!-- Pick-to-Tote Views -->
    <record id="view_warehouse_pick_tote_form" model="ir.ui.view">
        <field name="name">warehouse.pick.tote.form</field>
        <field name="model">warehouse.pick.tote</field>
        <field name="arch" type="xml">
            <form string="Pick-to-Tote">
                <header>
                    <button name="action_start_picking" string="Start Picking" type="object"
                            invisible="state != 'assigned'" class="oe_highlight"/>
                    <button name="action_confirm_picked" string="Confirm Picked" type="object"
                            invisible="state != 'picking'" class="oe_highlight"/>
                    <button name="action_start_sorting" string="Start Sorting" type="object"
                            invisible="state != 'picked'" class="oe_highlight"/>
                    <button name="action_complete" string="Complete" type="object"
                            invisible="state != 'sorting'" class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,assigned,picking,picked,sorting,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_pickings" icon="fa-shopping-cart">
                            <field string="Orders" name="picking_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_lines" icon="fa-list">
                            <field string="Lines" name="line_count" widget="statinfo"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="tote_barcode"/>
                            <field name="tote_color" widget="color"/>
                            <field name="warehouse_id" options="{'no_create': True}"/>
                            <field name="wave_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="picker_id"/>
                            <field name="packing_station_id"/>
                            <field name="total_qty"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Tote Lines" name="lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id" options="{'no_create': True}"/>
                                    <field name="picking_id" options="{'no_create': True}"/>
                                    <field name="source_bin_id" options="{'no_create': True}"/>
                                    <field name="planned_qty"/>
                                    <field name="picked_qty"/>
                                    <field name="remaining_qty"/>
                                    <field name="is_picked" widget="boolean_toggle"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Orders" name="orders">
                            <field name="picking_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="partner_id"/>
                                    <field name="scheduled_date"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Timestamps" name="timestamps">
                            <group>
                                <group>
                                    <field name="assigned_date" readonly="1"/>
                                    <field name="picking_start_date" readonly="1"/>
                                    <field name="picked_date" readonly="1"/>
                                    <field name="sorted_date" readonly="1"/>
                                </group>
                                <group>
                                    <field name="pick_duration" readonly="1"/>
                                    <field name="sort_duration" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Notes" name="notes">
                            <field name="note" placeholder="Additional notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_warehouse_pick_tote_tree" model="ir.ui.view">
        <field name="name">warehouse.pick.tote.tree</field>
        <field name="model">warehouse.pick.tote</field>
        <field name="arch" type="xml">
            <list string="Pick-to-Tote" decoration-success="state == 'done'"
                  decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="tote_barcode"/>
                <field name="warehouse_id"/>
                <field name="picker_id"/>
                <field name="picking_count"/>
                <field name="line_count"/>
                <field name="total_qty"/>
                <field name="pick_duration"/>
                <field name="state" widget="badge"
                       decoration-info="state in ['draft', 'assigned']"
                       decoration-warning="state in ['picking', 'picked', 'sorting']"
                       decoration-success="state == 'done'"/>
            </list>
        </field>
    </record>

    <record id="view_warehouse_pick_tote_kanban" model="ir.ui.view">
        <field name="name">warehouse.pick.tote.kanban</field>
        <field name="model">warehouse.pick.tote</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="tote_barcode"/>
                <field name="picker_id"/>
                <field name="picking_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                        <br/>
                                        <span><field name="tote_barcode"/></span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="picker_id" widget="many2one_avatar_user"/>
                                    <br/>
                                    <field name="picking_count"/> orders, <field name="line_count"/> lines
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_warehouse_pick_tote_search" model="ir.ui.view">
        <field name="name">warehouse.pick.tote.search</field>
        <field name="model">warehouse.pick.tote</field>
        <field name="arch" type="xml">
            <search string="Pick-to-Tote">
                <field name="name"/>
                <field name="tote_barcode"/>
                <field name="picker_id"/>
                <field name="warehouse_id"/>
                <separator/>
                <filter string="My Totes" name="my_totes" domain="[('picker_id', '=', uid)]"/>
                <filter string="Active" name="active" domain="[('state', 'not in', ['done', 'cancelled'])]"/>
                <separator/>
                <filter string="Picking" name="picking" domain="[('state', 'in', ['picking', 'picked'])]"/>
                <filter string="Sorting" name="sorting" domain="[('state', '=', 'sorting')]"/>
                <group expand="0" string="Group By">
                    <filter string="Picker" name="group_picker" context="{'group_by': 'picker_id'}"/>
                    <filter string="Warehouse" name="group_warehouse" context="{'group_by': 'warehouse_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Wave" name="group_wave" context="{'group_by': 'wave_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_warehouse_pick_tote" model="ir.actions.act_window">
        <field name="name">Pick-to-Tote</field>
        <field name="res_model">warehouse.pick.tote</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Pick-to-Tote Operation
            </p>
            <p>
                Pick-to-tote enables batch picking where multiple orders are picked into totes,
                then sorted and packed at packing stations.
            </p>
        </field>
    </record>

    <!-- Pick Wave Views -->
    <record id="view_warehouse_pick_wave_form" model="ir.ui.view">
        <field name="name">warehouse.pick.wave.form</field>
        <field name="model">warehouse.pick.wave</field>
        <field name="arch" type="xml">
            <form string="Pick Wave">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_totes" icon="fa-cube">
                            <field string="Totes" name="tote_count" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="warehouse_id"/>
                        <field name="scheduled_date"/>
                    </group>
                    <field name="tote_ids">
                        <list>
                            <field name="name"/>
                            <field name="tote_barcode"/>
                            <field name="picker_id"/>
                            <field name="picking_count"/>
                            <field name="state" widget="badge"/>
                        </list>
                    </field>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_warehouse_pick_wave_tree" model="ir.ui.view">
        <field name="name">warehouse.pick.wave.tree</field>
        <field name="model">warehouse.pick.wave</field>
        <field name="arch" type="xml">
            <list string="Pick Waves">
                <field name="name"/>
                <field name="warehouse_id"/>
                <field name="tote_count"/>
                <field name="scheduled_date"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <record id="action_warehouse_pick_wave" model="ir.actions.act_window">
        <field name="name">Pick Waves</field>
        <field name="res_model">warehouse.pick.wave</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Packing Station Views -->
    <record id="view_warehouse_packing_station_form" model="ir.ui.view">
        <field name="name">warehouse.packing.station.form</field>
        <field name="model">warehouse.packing.station</field>
        <field name="arch" type="xml">
            <form string="Packing Station">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="warehouse_id"/>
                        <field name="location_id"/>
                        <field name="active"/>
                    </group>
                    <field name="user_ids" widget="many2many_tags"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_warehouse_packing_station_tree" model="ir.ui.view">
        <field name="name">warehouse.packing.station.tree</field>
        <field name="model">warehouse.packing.station</field>
        <field name="arch" type="xml">
            <list string="Packing Stations">
                <field name="name"/>
                <field name="code"/>
                <field name="warehouse_id"/>
                <field name="location_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="action_warehouse_packing_station" model="ir.actions.act_window">
        <field name="name">Packing Stations</field>
        <field name="res_model">warehouse.packing.station</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_warehouse_advanced" name="Advanced Operations" 
