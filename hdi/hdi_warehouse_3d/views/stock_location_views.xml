<?xml version="1.0" encoding="utf-8"?>
<odoo>
        
        <!-- Extend Stock Location Form with 3D Fields -->
        <record id="view_location_form_3d" model="ir.ui.view">
            <field name="name">stock.location.form.3d</field>
            <field name="model">stock.location</field>
            <field name="inherit_id" ref="stock.view_location_form"/>
            <field name="arch" type="xml">
                
                <!-- Add Bin field after location_id -->
                <xpath expr="//field[@name='location_id']" position="after">
                    <field name="bin_id" string="Linked Warehouse Bin" 
                        options="{'no_create': True}"/>
                </xpath>
                
            </field>
        </record>
        
    </odoo>
