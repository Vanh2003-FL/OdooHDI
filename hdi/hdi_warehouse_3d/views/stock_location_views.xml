<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Stock Location List View Extension -->
    <record id="view_stock_location_list_3d" model="ir.ui.view">
        <field name="name">stock.location.list.3d</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_tree2"/>
        <field name="arch" type="xml">
            <field name="usage" position="after">
                <field name="shelf_id" optional="show"/>
                <field name="area_id" optional="hide"/>
                <field name="level_number" optional="hide"/>
                <field name="bin_state" widget="badge" optional="show"/>
            </field>
        </field>
    </record>

    <!-- Stock Location Form View Extension -->
    <record id="view_stock_location_form_3d" model="ir.ui.view">
        <field name="name">stock.location.form.3d</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_form"/>
        <field name="arch" type="xml">
            <!-- Add shelf and warehouse fields at top -->
            <field name="location_id" position="after">
                <field name="shelf_id" invisible="usage != 'internal'"/>
            </field>
            
            <xpath expr="//sheet" position="inside">
                <!-- Manual Bin Creation Help -->
                <div class="alert alert-info" role="alert" invisible="id">
                    <strong>üí° Creating a Bin Manually</strong><br/>
                    For best practice, create bins automatically by setting up a <strong>Shelf</strong> first.<br/>
                    If you need to create a bin manually:
                    <ul>
                        <li>Select a <strong>Shelf</strong> (required)</li>
                        <li>Set <strong>Level Number</strong> and <strong>Bin Number</strong></li>
                        <li>Coordinates will be auto-calculated based on shelf position</li>
                    </ul>
                </div>
                
                <!-- Lock Status Alert -->
                <div class="alert alert-danger" role="alert" invisible="not is_locked">
                    <strong>üîí LOCKED BIN</strong><br/>
                    This bin has inventory (stock.quant). It cannot be moved, resized, or deleted in 2D layout editor.<br/>
                    <br/>
                    <strong>‚úÖ Allowed:</strong> Block/Unblock operations<br/>
                    <strong>‚ùå Not Allowed:</strong> Move, Resize, Delete, Change Level
                </div>
                
                <group string="3D Warehouse Mapping" invisible="usage != 'internal' or not shelf_id">
                    <group>
                        <field name="shelf_id" required="1"/>
                        <field name="area_id"/>
                        <field name="level_number" required="1"/>
                        <field name="bin_number" required="1"/>
                    </group>
                    <group>
                        <field name="bin_state" widget="badge"/>
                        <field name="is_locked" widget="badge" invisible="not is_locked"/>
                        <field name="is_blocked" widget="boolean_toggle"/>
                        <field name="block_reason" invisible="not is_blocked"/>
                    </group>
                </group>
                <group string="3D Coordinates" invisible="usage != 'internal' or not shelf_id">
                    <group>
                        <field name="coordinate_x"/>
                        <field name="coordinate_y"/>
                        <field name="coordinate_z"/>
                    </group>
                    <group>
                        <field name="bin_width"/>
                        <field name="bin_depth"/>
                        <field name="bin_height"/>
                    </group>
                </group>
                <group string="Capacity" invisible="usage != 'internal' or not shelf_id">
                    <group>
                        <field name="max_capacity"/>
                        <field name="max_weight"/>
                    </group>
                    <group>
                        <field name="display_color" widget="color"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Bins Action (filtered stock.location) -->
    <record id="action_warehouse_bins" model="ir.actions.act_window">
        <field name="name">Bins</field>
        <field name="res_model">stock.location</field>
        <field name="view_mode">list,form</field>
        <!-- Domain only for LISTING bins, not for CREATE -->
        <field name="domain">[('usage', '=', 'internal'), ('shelf_id', '!=', False)]</field>
        <field name="context">{
            'search_default_internal': 1,
            'default_usage': 'internal',
            'default_bin_state': 'empty',
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Bin
            </p>
            <p>
                <strong>üí° Recommended:</strong> Create bins automatically by creating a <strong>Shelf</strong> first.<br/>
                Shelves auto-generate bins based on level count and bins per level configuration.<br/><br/>
                <strong>Manual bin creation:</strong>
                <ol>
                    <li>Click <strong>Create</strong> button above</li>
                    <li>Fill in bin name (e.g., BIN-001)</li>
                    <li>Select <strong>Shelf</strong> (required)</li>
                    <li>Set <strong>Level Number</strong> and <strong>Bin Number</strong></li>
                    <li>Save - coordinates will auto-calculate</li>
                </ol>
            </p>
        </field>
    </record>
</odoo>
