<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- ========== WAREHOUSE BIN VIEWS ========== -->
    
    <!-- Bin Tree View -->
    <record id="view_warehouse_bin_tree" model="ir.ui.view">
        <field name="name">warehouse.bin.tree</field>
        <field name="model">warehouse.bin</field>
        <field name="arch" type="xml">
            <tree string="Warehouse Bins" decoration-success="bin_status=='empty'" 
                  decoration-warning="bin_status=='partial'" decoration-danger="bin_status=='full'">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="shelf_id"/>
                <field name="location_id"/>
                <field name="bin_status" widget="badge" 
                       decoration-success="bin_status=='empty'" 
                       decoration-warning="bin_status=='partial'"
                       decoration-danger="bin_status=='full'"/>
                <field name="total_quantity"/>
                <field name="total_weight"/>
                <field name="pick_frequency"/>
                <field name="pick_priority" widget="badge"/>
            </tree>
        </field>
    </record>
    
    <!-- Bin Form View -->
    <record id="view_warehouse_bin_form" model="ir.ui.view">
        <field name="name">warehouse.bin.form</field>
        <field name="model">warehouse.bin</field>
        <field name="arch" type="xml">
            <form string="Warehouse Bin">
                <header>
                    <field name="bin_status" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="get_stock_info" type="object" class="oe_stat_button" icon="fa-cubes">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="total_quantity"/>
                                </span>
                                <span class="o_stat_text">Total Qty</span>
                            </div>
                        </button>
                        <button name="get_picking_moves" type="object" class="oe_stat_button" icon="fa-truck">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="pick_frequency"/>
                                </span>
                                <span class="o_stat_text">Picks (30d)</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Bin Code (e.g., A1-R01-S01-B01)"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="shelf_id"/>
                            <field name="location_id" required="1" 
                                   options="{'no_create': True, 'no_open': True}"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="is_pick_bin"/>
                            <field name="pick_priority" widget="badge"/>
                            <field name="last_picked_date" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="Position">
                        <group>
                            <label for="pos_x" string="Position (relative)"/>
                            <div class="o_row">
                                <field name="pos_x"/> m (X),
                                <field name="pos_y"/> m (Y)
                            </div>
                        </group>
                        <group>
                            <label for="bin_width" string="Dimensions"/>
                            <div class="o_row">
                                <field name="bin_width"/> m (W) ×
                                <field name="bin_depth"/> m (D) ×
                                <field name="bin_height"/> m (H)
                            </div>
                        </group>
                    </group>
                    
                    <group string="Capacity">
                        <group>
                            <field name="max_weight"/>
                            <field name="max_volume"/>
                        </group>
                        <group>
                            <field name="total_weight" readonly="1"/>
                            <div class="o_row">
                                <span>Utilization: </span>
                                <field name="total_weight" invisible="1"/>
                                <field name="max_weight" invisible="1"/>
                                <span t-if="total_weight and max_weight">
                                    <t t-esc="round(total_weight / max_weight * 100, 1)"/>%
                                </span>
                            </div>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Current Stock" name="stock">
                            <field name="quant_ids" readonly="1">
                                <tree>
                                    <field name="product_id"/>
                                    <field name="lot_id"/>
                                    <field name="quantity"/>
                                    <field name="reserved_quantity"/>
                                    <field name="available_quantity"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Bin Kanban View -->
    <record id="view_warehouse_bin_kanban" model="ir.ui.view">
        <field name="name">warehouse.bin.kanban</field>
        <field name="model">warehouse.bin</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="bin_status"/>
                <field name="total_quantity"/>
                <field name="total_weight"/>
                <field name="max_weight"/>
                <field name="pick_frequency"/>
                <field name="location_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click 
                                          #{record.bin_status.raw_value == 'empty' ? 'oe_kanban_color_5' : 
                                            record.bin_status.raw_value == 'partial' ? 'oe_kanban_color_3' : 
                                            'oe_kanban_color_1'}">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="location_id"/>
                                        </div>
                                    </div>
                                    <span t-attf-class="badge #{record.bin_status.raw_value == 'empty' ? 'badge-success' : 
                                                                  record.bin_status.raw_value == 'partial' ? 'badge-warning' : 
                                                                  'badge-danger'}">
                                        <field name="bin_status"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <i class="fa fa-cubes"/> <field name="total_quantity"/> units
                                        </div>
                                        <div class="col-6">
                                            <i class="fa fa-balance-scale"/> <field name="total_weight"/> kg
                                        </div>
                                    </div>
                                    <div class="row mt8">
                                        <div class="col-12">
                                            <i class="fa fa-line-chart"/> <field name="pick_frequency"/> picks (30d)
                                        </div>
                                    </div>
                                    <div class="row mt8">
                                        <div class="col-12">
                                            <div class="progress" style="height: 10px;">
                                                <div class="progress-bar" role="progressbar" 
                                                     t-attf-style="width: #{Math.min((record.total_weight.raw_value / record.max_weight.raw_value * 100), 100)}%"
                                                     t-attf-class="progress-bar #{(record.total_weight.raw_value / record.max_weight.raw_value) &gt; 0.9 ? 'bg-danger' : 
                                                                                  (record.total_weight.raw_value / record.max_weight.raw_value) &gt; 0.7 ? 'bg-warning' : 
                                                                                  'bg-success'}">
                                                </div>
                                            </div>
                                            <small>Utilization: <t t-esc="Math.round((record.total_weight.raw_value / record.max_weight.raw_value * 100))"/>%</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Bin Search View -->
    <record id="view_warehouse_bin_search" model="ir.ui.view">
        <field name="name">warehouse.bin.search</field>
        <field name="model">warehouse.bin</field>
        <field name="arch" type="xml">
            <search string="Search Bins">
                <field name="name" string="Bin Code"/>
                <field name="location_id"/>
                <field name="shelf_id"/>
                <separator/>
                <filter string="Empty" name="filter_empty" domain="[('bin_status', '=', 'empty')]"/>
                <filter string="Partial" name="filter_partial" domain="[('bin_status', '=', 'partial')]"/>
                <filter string="Full" name="filter_full" domain="[('bin_status', '=', 'full')]"/>
                <separator/>
                <filter string="Pick Bins" name="filter_pick_bins" domain="[('is_pick_bin', '=', True)]"/>
                <separator/>
                <filter string="High Priority" name="filter_high_priority" domain="[('pick_priority', '=', 'high')]"/>
                <filter string="Medium Priority" name="filter_medium_priority" domain="[('pick_priority', '=', 'medium')]"/>
                <filter string="Low Priority" name="filter_low_priority" domain="[('pick_priority', '=', 'low')]"/>
                <group expand="0" string="Group By">
                    <filter string="Shelf" name="group_shelf" context="{'group_by': 'shelf_id'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'bin_status'}"/>
                    <filter string="Priority" name="group_priority" context="{'group_by': 'pick_priority'}"/>
                    <filter string="Location" name="group_location" context="{'group_by': 'location_id'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Bin Action -->
    <record id="action_warehouse_bin" model="ir.actions.act_window">
        <field name="name">Warehouse Bins</field>
        <field name="res_model">warehouse.bin</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_warehouse_bin_search"/>
        <field name="context">{'search_default_filter_pick_bins': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create warehouse bins
            </p>
            <p>
                Bins are the smallest storage units in your warehouse. 
                Each bin links to a unique stock location.
            </p>
        </field>
    </record>
    
</odoo>
